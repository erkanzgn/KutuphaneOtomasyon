@using Kutuphane.Domain.Enums
@model IEnumerable<Kutuphane.Application.Dtos.AuthDtos.UserDto>

@{
    ViewData["Title"] = "Personel Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0"><i class="bi bi-shield-lock-fill me-2"></i>Personel & Kullanıcılar</h2>
        <small class="text-muted">Sistemdeki tüm kullanıcıların yetki ve durum yönetimi.</small>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm hover-scale">
        <i class="bi bi-person-plus-fill me-2"></i>Yeni Personel Ekle
    </a>
</div>

<div class="card shadow-sm border-0 mb-4 rounded-4">
    <div class="card-body p-2">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col">
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 ps-3"><i class="bi bi-search text-primary"></i></span>
                    <input type="text" name="searchTerm" class="form-control border-0 shadow-none"
                           placeholder="Ad, Soyad, Kullanıcı Adı veya E-Posta ile arama yapın..."
                           value="@ViewBag.SearchTerm">
                </div>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary rounded-pill px-4" type="submit">Ara</button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-light rounded-pill border ms-1" title="Temizle"><i class="bi bi-x-lg"></i></a>
                }
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-uppercase small text-muted">
                <tr>
                    <th class="ps-4 py-3">Kullanıcı</th>
                    <th>Rol & Yetki</th>
                    <th>Durum</th>
                    <th>Son Erişim</th>
                    <th class="text-end pe-4" style="min-width: 180px;">Yönetim</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 text-primary fw-bold rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                    @user.FirstName.Substring(0, 1).ToUpper()@user.LastName.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <div class="fw-bold text-dark">@user.FullName</div>
                                    <div class="small text-muted">@@@user.Username</div>
                                </div>
                            </div>
                        </td>

                        <td>
                             <form asp-action="ChangeRole" method="post">
                                <input type="hidden" name="id" value="@user.Id" />
                                <select name="newRole" class="form-select form-select-sm border-0 bg-light fw-medium shadow-sm" style="width: 130px; cursor:pointer;" onchange="this.form.submit()">
                                    <!option value="Admin" class="text-danger fw-bold" @(user.Role == "Admin" ? "selected" : "")>🛡️ Admin</!option>
                                    <!option value="Librarian" class="text-warning fw-bold" @(user.Role == "Librarian" ? "selected" : "")>📚 Personel</!option>
                                    <!option value="Member" class="text-primary fw-bold" @(user.Role == "Member" ? "selected" : "")>👤 Üye</!option>
                                </select>
                            </form>
                        </td>

                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary bg-opacity-10 text-secondary border px-3 py-2 rounded-pill">Pasif</span>
                            }
                        </td>

                        <td>
                            <small class="text-muted font-monospace">
                                @(user.LastLoginDate.HasValue ? user.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm") : "-")
                            </small>
                        </td>

                        <td class="text-end pe-4">
                            <div class="d-flex justify-content-end align-items-center gap-2">
                                
                                <form asp-action="ToggleStatus" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    @if (user.IsActive)
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-secondary btn-square" 
                                                title="Pasife Al" data-bs-toggle="tooltip">
                                            <i class="bi bi-dash-circle"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-success btn-square" 
                                                title="Aktife Al" data-bs-toggle="tooltip">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    }
                                </form>

                                <span class="text-muted opacity-25 mx-1">|</span>

                                <button type="button" class="btn btn-sm btn-outline-warning btn-square" 
                                        data-bs-toggle="modal" data-bs-target="#resetPasswordModal-@user.Id"
                                        title="Şifre Sıfırla">
                                    <i class="bi bi-key-fill"></i>
                                </button>

                                <span class="text-muted opacity-25 mx-1">|</span>

                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-square" 
                                            title="Kullanıcıyı Sil" 
                                            onclick="return confirm('DİKKAT: @user.FullName kullanıcısını silmek üzeresiniz. Devam edilsin mi?');">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>

                            </div>

                            <div class="modal fade" id="resetPasswordModal-@user.Id" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content rounded-4 border-0 shadow">
                                        <div class="modal-header border-bottom-0">
                                            <h5 class="modal-title fw-bold text-dark"><i class="bi bi-shield-lock me-2 text-warning"></i>Şifre Sıfırla</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="ResetPassword" method="post">
                                            <div class="modal-body text-start">
                                                <div class="alert alert-light border mb-3">
                                                    <small class="text-muted"><strong>@user.Username</strong> kullanıcısı için yeni şifre belirliyorsunuz.</small>
                                                </div>
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <div class="form-floating">
                                                    <input type="text" name="newPassword" class="form-control" id="newPassInput" required minlength="6" placeholder="Yeni şifre">
                                                    <label for="newPassInput">Yeni Şifre</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer border-top-0">
                                                <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">İptal</button>
                                                <button type="submit" class="btn btn-warning rounded-pill px-4 fw-bold">Güncelle</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <div class="text-muted mb-2"><i class="bi bi-search display-4 opacity-25"></i></div>
                <h5>Kullanıcı Bulunamadı</h5>
                <p class="text-muted">Arama kriterlerinize uygun personel veya üye yok.</p>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-sm btn-outline-primary">Listeyi Sıfırla</a>
                }
            </div>
        }
    </div>
</div>

<style>
    .btn-square {
        width: 34px;
        height: 34px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        padding: 0;
        transition: all 0.2s ease;
    }
    .btn-square:hover {
        transform: translateY(-2px);
    }
    .hover-scale:hover {
        transform: scale(1.02);
        transition: transform 0.2s;
    }
</style>