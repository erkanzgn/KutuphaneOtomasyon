@using Kutuphane.Application.Dtos.ReportDtos
@model AdminStatsDto

@{
    ViewData["Title"] = "Detaylı İstatistikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid px-4 py-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-0">Kütüphane Analizi</h4>
            <p class="text-muted small mb-0">Verilerin detaylı grafiksel gösterimi.</p>
        </div>
        <a asp-action="Index" class="btn btn-sm btn-light border shadow-sm rounded-pill px-3">
            <i class="bi bi-arrow-left me-2"></i>Geri Dön
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-book fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small text-uppercase fw-bold mb-0">Toplam Kitap</h6>
                        <h3 class="fw-bold text-dark mb-0">@Model.TotalBooks</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-people fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small text-uppercase fw-bold mb-0">Toplam Üye</h6>
                        <h3 class="fw-bold text-dark mb-0">@Model.TotalMembers</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-arrow-left-right fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small text-uppercase fw-bold mb-0">Aktif Ödünç</h6>
                        <h3 class="fw-bold text-dark mb-0">@Model.ActiveLoans</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold text-dark mb-0">📈 Aylık Hareketlilik</h6>
                </div>
                <div class="card-body">
                    <canvas id="loanChart" style="height: 300px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold text-dark mb-0">📚 Kategori Dağılımı</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <canvas id="categoryChart" style="height: 250px; width: 100%;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold text-dark mb-0">✒️ En Çok Eseri Olan Yazarlar</h6>
                </div>
                <div class="card-body">
                    <canvas id="authorChart" style="height: 250px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100 rounded-3">
                <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold text-dark mb-0">🏆 Ayın Kitap Kurtları</h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light small text-muted text-uppercase">
                            <tr>
                                <th class="ps-4">Sıra</th>
                                <th>Üye</th>
                                <th class="text-center">Okunan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int rank = 1; }
                            @foreach (var reader in Model.TopReaders)
                            {
                                <tr>
                                    <td class="ps-4 text-muted fw-bold">@rank</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light text-primary rounded-circle fw-bold d-flex align-items-center justify-content-center me-2 border" style="width: 30px; height: 30px; font-size: 0.8rem;">
                                                @reader.MemberName.Substring(0, 1)
                                            </div>
                                            <span class="text-dark small fw-bold">@reader.MemberName</span>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">@reader.TotalReadCount</span>
                                    </td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Sadeleştirilmiş Chart Ayarları
    Chart.defaults.font.family = "'Segoe UI', sans-serif";
    Chart.defaults.color = '#6c757d';
    
    // Renkler (Daha soft)
    const softBlue = '#3b82f6';
    const softGreen = '#10b981';
    const softYellow = '#f59e0b';
    const softColors = ['#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#6b7280'];

    // 1. Line Chart
    new Chart(document.getElementById('loanChart'), {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Months)),
            datasets: [{
                label: 'Ödünç',
                data: @Html.Raw(Json.Serialize(Model.MonthlyLoanCounts)),
                borderColor: softBlue,
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                borderWidth: 2,
                tension: 0.3,
                fill: true,
                pointRadius: 3
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, grid: { borderDash: [4], color: '#f3f4f6' } },
                x: { grid: { display: false } }
            }
        }
    });

    // 2. Doughnut Chart
    new Chart(document.getElementById('categoryChart'), {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Categories)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.BookCountsByCategory)),
                backgroundColor: softColors,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '75%',
            plugins: {
                legend: { position: 'right', labels: { boxWidth: 12, usePointStyle: true } }
            }
        }
    });

    // 3. Bar Chart (Yazarlar)
    new Chart(document.getElementById('authorChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.TopAuthors)),
            datasets: [{
                label: 'Kitap Sayısı',
                data: @Html.Raw(Json.Serialize(Model.BookCountsByAuthor)),
                backgroundColor: 'rgba(16, 185, 129, 0.7)',
                borderRadius: 4,
                barThickness: 20
            }]
        },
        options: {
            indexAxis: 'y',
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: {
                x: { beginAtZero: true, grid: { display: false } },
                y: { grid: { display: false } }
            }
        }
    });
</script>