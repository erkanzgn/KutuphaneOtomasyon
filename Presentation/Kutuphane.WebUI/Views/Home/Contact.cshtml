@using Kutuphane.WebUI.Models.ViewModels
@model ContactViewModel

@{
    ViewData["Title"] = "İletişim";
}

<div class="container" style="margin-top: 60px; margin-bottom: 80px;">
    <div class="row">

        <!-- Sol Taraf - İletişim Formu -->
        <div class="col-lg-7 mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h2 class="mb-4">
                        <i class="bi bi-envelope text-primary"></i> Bize Ulaşın
                    </h2>
                    <p class="text-muted mb-4">
                        Sorularınız, önerileriniz veya geri bildirimleriniz için aşağıdaki formu doldurabilirsiniz.
                    </p>

                    <form asp-controller="Home" asp-action="Contact" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Adınız Soyadınız">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" placeholder="Mesaj konusu">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message" class="form-control" rows="6" placeholder="Mesajınızı buraya yazın..."></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-send"></i> Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sağ Taraf - İletişim Bilgileri -->
        <div class="col-lg-5">
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h4 class="mb-4">
                        <i class="bi bi-info-circle text-info"></i> İletişim Bilgileri
                    </h4>

                    <div class="mb-4">
                        <h6><i class="bi bi-geo-alt text-danger"></i> Adres</h6>
                        <p class="text-muted">
                            Ankara Caddesi No:123<br>
                            Çankaya/ANKARA<br>
                            06000 Türkiye
                        </p>
                    </div>

                    <div class="mb-4">
                        <h6><i class="bi bi-telephone text-success"></i> Telefon</h6>
                        <p class="text-muted">
                            +90 (312) 123 45 67<br>
                            +90 (312) 123 45 68
                        </p>
                    </div>

                    <div class="mb-4">
                        <h6><i class="bi bi-envelope text-primary"></i> Email</h6>
                        <p class="text-muted">
                            info@library.com<br>
                            destek@library.com
                        </p>
                    </div>

                    <div class="mb-4">
                        <h6><i class="bi bi-clock text-warning"></i> Çalışma Saatleri</h6>
                        <p class="text-muted">
                            Pazartesi - Cuma: 09:00 - 18:00<br>
                            Cumartesi: 10:00 - 16:00<br>
                            Pazar: Kapalı
                        </p>
                    </div>
                </div>
            </div>

            <!-- Sosyal Medya -->
            <div class="card shadow-sm">
                <div class="card-body p-4 text-center">
                    <h5 class="mb-4">Sosyal Medyada Bizi Takip Edin</h5>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="btn btn-outline-info btn-lg">
                            <i class="bi bi-twitter-x"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}