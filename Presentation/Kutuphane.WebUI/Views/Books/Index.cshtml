@model List<Kutuphane.Application.Dtos.BookDtos.ResultBookDto>
@{
    ViewData["Title"] = "Kitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Query string'den değerleri al
    var search = Context.Request.Query["search"].ToString();
    var category = Context.Request.Query["category"].ToString();
    var author = Context.Request.Query["author"].ToString();
    var pages = Context.Request.Query["pages"].ToString();
    var available = Context.Request.Query["available"].ToString() == "true";
    var categories = Model.Select(b => b.Category).Distinct().OrderBy(c => c).ToList();
}

<div class="container" style="margin-top:40px;">
    <div class="row">

        <!-- SIDEBAR -->
        <div class="col-lg-3 col-md-4">
            <div class="card p-3 mb-4">
                <h5>Filtrele</h5>
                <hr>

                <form asp-controller="Books" asp-action="Index" method="get">

                    <!-- Arama -->
                    <div class="mb-3">
                        <label class="form-label">Kitap Ara</label>
                        <input type="text" name="search" value="@search" class="form-control" placeholder="Kitap adı...">
                    </div>

                    <!-- Kategori -->
                    <div class="mb-3">
                        <select name="category" class="form-select">
                            <option value="">Hepsi</option>
                            @foreach (var cat in categories)
                            {
                                <option value="@cat" selected="@(cat == category)">@cat</option>
                            }
                        </select>
                    </div>

                    <!-- Yazar -->
                    <div class="mb-3">
                        <label class="form-label">Yazar</label>
                        <input type="text" name="author" value="@author" class="form-control" placeholder="Yazar adı...">
                    </div>

                    <!-- Sayfa Sayısı -->
                    <div class="mb-3">
                        <label class="form-label">Sayfa Sayısı</label>
                        <select name="pages" class="form-select">
                            <option value="">Hepsi</option>
                            <option value="0-200" selected="@(pages == "0-200")">0 - 200</option>
                            <option value="200-400" selected="@(pages == "200-400")">200 - 400</option>
                            <option value="400-600" selected="@(pages == "400-600")">400 - 600</option>
                            <option value="600" selected="@(pages == "600")">600+</option>
                        </select>
                    </div>

                    <!-- Müsait Olanlar -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="available" value="true" checked="@available">
                        <label class="form-check-label">Sadece müsait olanlar</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Filtrele</button>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary w-100 mt-2">Temizle</a>
                </form>
            </div>
        </div>

        <!-- KİTAPLAR -->
        <div class="col-lg-9 col-md-8">

            <!-- Sonuç Sayısı -->
            <div class="mb-3">
                <h5>@Model.Count Kitap Bulundu</h5>
            </div>

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aradığınız kriterlere uygun kitap bulunamadı.
                </div>
            }
            else
            {
                <div class="row gy-4">
                    @foreach (var book in Model)
                    {
                        <div class="col-lg-3 col-md-6">
                            <article class="book-card">
                                @if (book.ImageUrl != null)
                                {
                                    <div class="post-img">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                            <img style="max-width: 150px; max-height:200px; margin-left: 10px"
                                                 src="@book.ImageUrl"
                                                 alt="@book.Title"
                                                 class="img-fluid">
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="post-img">
                                        <img style="max-width: 150px; max-height:200px; margin-left: 10px"
                                             src="~/BookTemp/assets/img/placeholderBook.png"
                                             alt="@book.Title"
                                             class="img-fluid">
                                    </div>
                                }

                                <div class="post-content">
                                    <h3 class="post-title">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                            @book.Title
                                        </a>
                                    </h3>
                                    <p class="post-author">@book.Author</p>
                                    <div class="post-meta">
                                        <span class="badge bg-primary">@book.Category</span>
                                        @if (book.AvailableCopies > 0)
                                        {
                                            <span class="badge bg-success">@book.AvailableCopies Kopya Müsait</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Müsait Değil</span>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <span class="text-muted small">
                                            <i class="bi bi-book"></i> @book.PageCount sayfa
                                        </span>
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="readmore">
                                            Detay <i class="bi bi-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    }
                </div>
            }
        </div>

    </div>
</div>