@model Kutuphane.WebUI.Models.ViewModels.BookEditViewModel

@{
    ViewData["Title"] = "Kitap Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Kitap Düzenle: @Model.Title</h5>
        </div>
        <div class="card-body">

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ExistingImageUrl" /> <div class="row">
                    <div class="col-md-8">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Title" class="form-label">Kitap Adı</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Author" class="form-label">Yazar</label>
                                <input asp-for="Author" class="form-control" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="col-md-6">
                                <label asp-for="ISBN" class="form-label">ISBN</label>
                                <input asp-for="ISBN" class="form-control" maxlength="13" oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                                <span asp-validation-for="ISBN" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">Kategori</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="Roman">Roman</option>
                                    <option value="Bilim">Bilim</option>
                                    <option value="Tarih">Tarih</option>
                                    <option value="Felsefe">Felsefe</option>
                                    <option value="Çocuk">Çocuk</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="PageCount" class="form-label">Sayfa</label>
                                <input asp-for="PageCount" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PublicationYear" class="form-label">Yıl</label>
                                <input asp-for="PublicationYear" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Publisher" class="form-label">Yayınevi</label>
                                <input asp-for="Publisher" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3 border p-3 rounded bg-light text-center">
                            <label class="form-label fw-bold">Mevcut Kapak</label>
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                                {
                                    <img src="@Model.ExistingImageUrl" class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
                                }
                                else
                                {
                                    <img src="~/BookTemp/assets/img/placeholderBook.png" class="img-fluid rounded" style="max-height: 200px; opacity: 0.5;" />
                                    <p class="text-muted small mt-1">Resim Yok</p>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Resmi Değiştir</label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <div class="form-text">Yeni bir dosya seçerseniz mevcut resim değiştirilecektir.</div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Değişiklikleri Kaydet</button>
                </div>

            </form>
        </div>
    </div>
</div>