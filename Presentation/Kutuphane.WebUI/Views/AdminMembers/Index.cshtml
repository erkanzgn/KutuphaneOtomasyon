@model IEnumerable<Kutuphane.Application.Dtos.MemberDtos.ResultMemberDto>

@{
    ViewData["Title"] = "Üye Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0"><i class="bi bi-people-fill me-2"></i>Üye Listesi</h2>
        <small class="text-muted">Kütüphane üyelerini yönetin, ceza durumlarını kontrol edin.</small>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm hover-scale">
        <i class="bi bi-person-plus-fill me-2"></i>Yeni Üye Ekle
    </a>
</div>

<div class="card shadow-sm border-0 mb-4 rounded-4">
    <div class="card-body p-2">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col">
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 ps-3"><i class="bi bi-search text-primary"></i></span>
                    <input type="text" name="searchTerm" class="form-control border-0 shadow-none"
                           placeholder="Üye Adı, Soyadı, E-Posta veya Üye No ile arama yapın..."
                           value="@ViewBag.SearchTerm">
                </div>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary rounded-pill px-4" type="submit">Ara</button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-light rounded-pill border ms-1" title="Temizle"><i class="bi bi-x-lg"></i></a>
                }
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-uppercase small text-muted">
                <tr>
                    <th class="ps-4">Durum</th>
                    <th>Üye Bilgisi</th>
                    <th>İletişim</th>
                    <th>Ceza Bitiş</th>
                    <th class="text-end pe-4" style="min-width: 160px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    // Satır Rengi ve Durum Belirleme
                    string rowClass = "";
                    string statusBadge = "";

                    if (member.Status == "Pasif")
                    {
                        rowClass = "table-danger bg-opacity-10"; 
                        statusBadge = "<span class='badge bg-danger'><i class='bi bi-slash-circle me-1'></i>Pasif (Ban)</span>";
                    }
                    else if (member.BanExpirationDate.HasValue && member.BanExpirationDate > DateTime.Now)
                    {
                        rowClass = "table-warning bg-opacity-10"; 
                        var daysLeft = (member.BanExpirationDate.Value - DateTime.Now).Days;
                        string timeText = daysLeft == 0 ? "Bugün" : $"{daysLeft} Gün";
                        statusBadge = $"<span class='badge bg-warning text-dark'><i class='bi bi-hourglass-split me-1'></i>Cezalı ({timeText})</span>";
                    }
                    else
                    {
                        statusBadge = "<span class='badge bg-success bg-opacity-10 text-success border border-success'>Aktif</span>";
                    }

                    <tr class="@rowClass">
                        <td class="ps-4 text-center" style="width: 60px;">
                            @if (member.Status == "Aktif" && (!member.BanExpirationDate.HasValue || member.BanExpirationDate < DateTime.Now))
                            {
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold fs-5" style="width: 45px; height: 45px;">
                                    @member.FirstName.Substring(0, 1)@member.LastName.Substring(0, 1)
                                </div>
                            }
                            else
                            {
                                <div class="bg-white rounded-circle d-flex align-items-center justify-content-center border shadow-sm" style="width: 45px; height: 45px;">
                                    <i class="bi bi-exclamation-triangle-fill fs-5 text-danger"></i>
                                </div>
                            }
                        </td>

                        <td>
                            <div class="fw-bold text-dark fs-6">@member.FullName</div>
                            <div class="small text-muted font-monospace">@member.MemberNumber</div>
                            <div class="mt-1">@Html.Raw(statusBadge)</div>
                        </td>

                        <td>
                            <div class="small text-dark"><i class="bi bi-envelope me-2 text-muted"></i>@member.Email</div>
                            <div class="small text-muted mt-1"><i class="bi bi-telephone me-2"></i>@member.Phone</div>
                        </td>

                        <td>
                            @if (member.BanExpirationDate.HasValue && member.BanExpirationDate > DateTime.Now)
                            {
                                <span class="fw-bold text-danger">@member.BanExpirationDate.Value.ToString("dd.MM.yyyy")</span>
                                <div class="small text-muted">@member.BanExpirationDate.Value.ToString("HH:mm")</div>
                            }
                            else
                            {
                                <span class="text-muted opacity-50">-</span>
                            }
                        </td>

<td class="text-end pe-4" style="min-width: 180px;">
    <div class="d-flex justify-content-end align-items-center gap-2">
        
        @if (member.Status == "Pasif" || (member.BanExpirationDate.HasValue && member.BanExpirationDate > DateTime.Now))
        {
            <form asp-action="RemoveBan" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@member.Id" />
                <button type="submit" class="btn btn-sm btn-outline-success btn-square" 
                        title="Cezayı Kaldır" onclick="return confirm('Cezayı kaldırmak istediğinize emin misiniz?');"
                        data-bs-toggle="tooltip">
                    <i class="bi bi-shield-check"></i> </button>
            </form>
            
            <span class="text-muted opacity-25 mx-1">|</span>
        }

        <a asp-action="Details" asp-route-id="@member.Id" 
           class="btn btn-sm btn-outline-primary btn-square" 
           title="Detaylar" data-bs-toggle="tooltip">
            <i class="bi bi-list-ul"></i> </a>

        <span class="text-muted opacity-25 mx-1">|</span>

        <a asp-action="Edit" asp-route-id="@member.Id" 
           class="btn btn-sm btn-outline-warning btn-square" 
           title="Düzenle" data-bs-toggle="tooltip">
            <i class="bi bi-pencil-fill"></i> </a>

        <span class="text-muted opacity-25 mx-1">|</span>

        <form asp-action="Delete" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@member.Id" />
            <button type="submit" class="btn btn-sm btn-outline-danger btn-square" 
                    title="Sil" 
                    onclick="return confirm('DİKKAT: Üyeyi silmek istiyor musunuz?\n\nEğer üyenin üzerinde iade edilmemiş kitap varsa silme işlemi gerçekleşmeyecektir.');"
                    data-bs-toggle="tooltip">
                <i class="bi bi-trash-fill"></i> </button>
        </form>

    </div>
</td>

                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <div class="text-muted mb-2"><i class="bi bi-search display-4 opacity-25"></i></div>
                <h5>Kayıt Bulunamadı</h5>
                <p class="text-muted">Arama kriterlerinize uygun üye yok.</p>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-sm btn-outline-primary">Listeyi Sıfırla</a>
                }
            </div>
        }
    </div>
</div>
<style>
    /* Kare İkon Butonları */
    .btn-square {
        width: 34px;
        height: 34px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px; /* Hafif yuvarlak köşeler */
        padding: 0;
        transition: all 0.2s ease;
    }

    /* Hover efektinde biraz yukarı kalksın */
    .btn-square:hover {
        transform: translateY(-2px);
    }
</style>