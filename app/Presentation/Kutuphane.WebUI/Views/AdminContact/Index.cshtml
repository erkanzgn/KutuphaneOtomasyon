@model Kutuphane.WebUI.Models.ViewModels.ContactListViewModel

@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="bi bi-envelope-paper me-2 text-primary"></i>Mesaj Merkezi</h2>
            <p class="text-muted small mb-0">Kullanıcı iletişimleri ve gönderilen mesajlar.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-pencil-square me-2"></i>Yeni Mesaj Yaz
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-bottom p-0">
            <ul class="nav nav-tabs nav-fill border-0" id="messageTabs" role="tablist">

                <li class="nav-item" role="presentation">
                    <button class="nav-link active py-3 fw-bold border-0 border-bottom border-3 border-primary text-primary"
                            id="inbox-tab" data-bs-toggle="tab" data-bs-target="#inbox-content" type="button">
                        <i class="bi bi-inbox-fill me-2"></i>Gelen Kutusu
                        <span class="badge bg-primary bg-opacity-10 text-primary ms-2 rounded-pill">@Model.InboxMessages.Count</span>
                    </button>
                </li>

                <li class="nav-item" role="presentation">
                    <button class="nav-link py-3 fw-bold border-0 text-secondary"
                            id="outbox-tab" data-bs-toggle="tab" data-bs-target="#outbox-content" type="button">
                        <i class="bi bi-send-fill me-2"></i>Gönderilenler
                        <span class="badge bg-secondary bg-opacity-10 text-secondary ms-2 rounded-pill">@Model.OutboxMessages.Count</span>
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-0">
            <div class="tab-content" id="messageTabsContent">

                <div class="tab-pane fade show active" id="inbox-content" role="tabpanel">
                    @if (Model.InboxMessages.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-muted small text-uppercase">
                                    <tr>
                                        <th class="ps-4">Gönderen</th>
                                        <th>Konu</th>
                                        <th>Tarih</th>
                                        <th class="text-end pe-4">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.InboxMessages)
                                    {
                                        <tr class="@(!item.IsRead ? "fw-bold bg-light" : "")">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                        @item.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <div>
                                                        <div class="text-dark">@item.Name</div>
                                                        <div class="small text-muted">@item.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!item.IsRead)
                                                {
                                                    <span class="badge bg-danger me-2">YENİ</span>
                                                }
                                                @item.Subject
                                            </td>
                                            <td class="text-muted small">
                                                <i class="bi bi-calendar3 me-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                            </td>
                                            <td class="text-end pe-4">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                    Oku & Cevapla
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 opacity-25"></i>
                            <p class="mt-2">Gelen kutusu boş.</p>
                        </div>
                    }
                </div>

                <div class="tab-pane fade" id="outbox-content" role="tabpanel">
                    @if (Model.OutboxMessages.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-muted small text-uppercase">
                                    <tr>
                                        <th class="ps-4">Alıcı</th>
                                        <th>Konu</th>
                                        <th>Gönderim Tarihi</th>
                                        <th class="text-end pe-4">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OutboxMessages)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                        <i class="bi bi-arrow-up-right"></i>
                                                    </div>
                                                    <div>
                                                        <div class="text-dark">@item.Name</div>
                                                        <div class="small text-muted">@item.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Subject</td>
                                            <td class="text-muted small">
                                                <i class="bi bi-clock me-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                            </td>
                                            <td class="text-end pe-4">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                                                    İncele
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-send fs-1 opacity-25"></i>
                            <p class="mt-2">Henüz gönderilmiş bir mesaj yok.</p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Sekme aktif olduğunda stil */
    .nav-tabs .nav-link.active {
        color: var(--bs-primary) !important;
        background-color: transparent;
    }

    .nav-tabs .nav-link {
        color: #6c757d;
        transition: all 0.3s;
    }

        .nav-tabs .nav-link:hover {
            color: var(--bs-primary);
            background-color: rgba(0,0,0,0.02);
        }
</style>