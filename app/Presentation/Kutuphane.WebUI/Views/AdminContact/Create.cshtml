@model Kutuphane.Application.Dtos.ContactDtos.CreateContactMessageDto

@{
    ViewData["Title"] = "Yeni Mesaj Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark mb-0"><i class="bi bi-send-plus-fill me-2 text-primary"></i>Yeni Mesaj</h3>
                <a asp-action="Index" class="btn btn-light border rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Gelen Kutusu
                </a>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5">

                    <form asp-action="Create" method="post">

                        <div class="mb-4 bg-light p-3 rounded-3 border border-light">
                            <label class="form-label fw-bold text-primary small">Kayıtlı Üye Seç (Opsiyonel)</label>
                            <select asp-for="SelectedMemberId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Members" id="memberSelect">
                                <option value="">-- Manuel Giriş Yapacağım --</option>
                            </select>
                            <div class="form-text small">Listeden seçim yaparsanız bilgiler otomatik dolar.</div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">Alıcı Adı Soyadı</label>
                                <input asp-for="Name" class="form-control" id="receiverName" placeholder="Ad Soyad" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">E-Posta Adresi</label>
                                <input asp-for="Email" class="form-control" id="receiverEmail" placeholder="ornek@email.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted">Konu</label>
                                <input asp-for="Subject" class="form-control" placeholder="Mesaj Konusu" />
                                <span asp-validation-for="Subject" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted">Mesajınız</label>
                                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Mesajınızı buraya yazın..."></textarea>
                                <span asp-validation-for="Message" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="bi bi-send-fill me-2"></i> Gönder
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
      
    </script>
}