@model Kutuphane.Domain.Entities.ContactMessage

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-0">
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-light border shadow-sm">
            <i class="bi bi-arrow-left"></i> Gelen Kutusuna Dön
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-envelope-open me-2 text-primary"></i>@Model.Subject
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded-3">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px; font-size: 1.2rem;">
                            @Model.Name.Substring(0, 1).ToUpper()
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0 fw-bold text-dark">@Model.Name</h6>
                            <a href="mailto:@Model.Email" class="text-decoration-none text-muted small">@Model.Email</a>
                        </div>
                        <div class="ms-auto text-end">
                            <small class="text-muted d-block">Tarih</small>
                            <span class="fw-bold text-dark">@Model.CreatedDate.ToString("dd MMMM yyyy, HH:mm")</span>
                        </div>
                    </div>

                    <div class="p-3">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Mesaj İçeriği:</h6>
                        <p class="text-dark lh-lg" style="white-space: pre-wrap;">@Model.Message</p>
                    </div>
                </div>

                <div class="card-footer bg-white border-top-0 py-3">
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                       onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');"
                       class="btn btn-outline-danger float-end">
                        <i class="bi bi-trash"></i> Mesajı Sil
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-success"><i class="bi bi-reply-all me-2"></i>Cevap Yaz</h5>
                </div>
                <div class="card-body">

                    @if (!string.IsNullOrEmpty(Model.AdminReplay))
                    {
                   
                        <div class="alert alert-success">
                            <h6 class="alert-heading fw-bold"><i class="bi bi-check-circle-fill me-2"></i>Cevaplandı</h6>
                            <hr>
                            <p class="mb-0 small">@Model.AdminReplay</p>
                            <small class="text-muted mt-2 d-block text-end">@Model.ReplayDate?.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                    }
                    else
                    {
                      
                        <form asp-action="Reply" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">Yanıtınız:</label>
                                <textarea name="replyMessage" class="form-control" rows="8" placeholder="Sayın @Model.Name, mesajınız için teşekkürler..." required></textarea>
                            </div>

                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-send me-2"></i>Cevabı Gönder
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>