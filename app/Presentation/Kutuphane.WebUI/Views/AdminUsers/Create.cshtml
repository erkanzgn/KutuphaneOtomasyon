@using Kutuphane.Domain.Enums
@model Kutuphane.Application.Dtos.AuthDtos.CreateUserDto

@{
    ViewData["Title"] = "Yeni Personel Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="bi bi-person-add"></i> Yeni Sistem Kullanıcısı</h5>
            </div>
            <div class="card-body p-4">
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="ModelOnly" class="mb-0"></div>
                    </div>
                }

                <form asp-action="Create" method="post">
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Örn: Ahmet" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" placeholder="Örn: Yılmaz" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text">@@</span>
                            <input asp-for="Username" class="form-control" placeholder="kullaniciadi" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-Posta Adresi</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Role" class="form-label fw-bold">Yetki Seviyesi</label>
                        <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<UserRole>()">
                        </select>
                        <div class="form-text text-muted">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Admin:</strong> Tam yetki. 
                            <strong>Librarian:</strong> Kitap ve ödünç yönetimi yapar.
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Kaydet ve Üye Oluştur</button>
                        <a asp-action="Index" class="btn btn-light border">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>