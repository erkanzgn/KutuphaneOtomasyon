@model Kutuphane.WebUI.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0">
                <div class="card-body p-5">

                    <!-- Logo & Başlık -->
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus display-3 text-success"></i>
                        <h2 class="mt-3 mb-2">Kayıt Ol</h2>
                        <p class="text-muted">Yeni hesap oluşturun</p>
                    </div>

                    <!-- Hata Mesajları -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Register Form -->
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <!-- Ad -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="bi bi-person"></i> Ad
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Adınız">
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <!-- Soyad -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="bi bi-person"></i> Soyad
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Soyadınız">
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-at"></i> Kullanıcı Adı
                            </label>
                            <input asp-for="Username" class="form-control" placeholder="Kullanıcı adı seçin">
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Telefon -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">
                                <i class="bi bi-telephone"></i> Telefon
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="05XX XXX XX XX">
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <!-- Adres (Opsiyonel) -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="bi bi-geo-alt"></i> Adres (Opsiyonel)
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Adresiniz"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Doğum Tarihi (Opsiyonel) -->
                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">
                                <i class="bi bi-calendar"></i> Doğum Tarihi (Opsiyonel)
                            </label>
                            <input asp-for="DateOfBirth" class="form-control" type="date">
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <!-- Şifre -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-lock"></i> Şifre
                                </label>
                                <input asp-for="Password" class="form-control" placeholder="En az 8 karakter">
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Şifre Tekrar -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-lock-fill"></i> Şifre Tekrar
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi tekrar girin">
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Kullanım Koşulları -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                <a asp-controller="Home" asp-action="Terms" target="_blank">Kullanım koşullarını</a>
                                kabul ediyorum
                            </label>
                        </div>

                        <!-- Register Button -->
                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                            <i class="bi bi-person-check"></i> Kayıt Ol
                        </button>

                        <hr>

                        <!-- Login Link -->
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Zaten hesabınız var mı?
                                <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold">
                                    Giriş Yapın
                                </a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}