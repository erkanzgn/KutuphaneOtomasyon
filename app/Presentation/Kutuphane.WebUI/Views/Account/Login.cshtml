@model Kutuphane.WebUI.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="card shadow-lg border-0">
                <div class="card-body p-5">

                    <!-- Logo & Başlık -->
                    <div class="text-center mb-4">
                        <i class="bi bi-book display-3 text-primary"></i>
                        <h2 class="mt-3 mb-2">Giriş Yap</h2>
                        <p class="text-muted">Hesabınıza giriş yapın</p>
                    </div>

                    <!-- Hata Mesajları -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Login Form -->
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Username -->
                        <div class="mb-4">
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-person"></i> Kullanıcı Adı
                            </label>
                            <input asp-for="Username" class="form-control form-control-lg"
                                   placeholder="Kullanıcı adınızı girin" autofocus>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i> Şifre
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg"
                                   placeholder="Şifrenizi girin">
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                            <label asp-for="RememberMe" class="form-check-label">
                                Beni Hatırla
                            </label>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </button>

                        <!-- Forgot Password (Opsiyonel) -->
                        <div class="text-center mb-3">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="text-muted small">
                                Şifremi Unuttum
                            </a>
                        </div>

                        <hr>

                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Hesabınız yok mu?
                                <a asp-controller="Account" asp-action="Register" class="text-primary fw-bold">
                                    Kayıt Olun
                                </a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>

            <!-- Test Kullanıcıları (Development ortamı için) -->
            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <small class="text-muted">
                            <strong>Test Kullanıcıları:</strong><br>
                            Admin: admin / Admin123!<br>
                            Üye: ahmetyilmaz / Admin123!
                        </small>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}