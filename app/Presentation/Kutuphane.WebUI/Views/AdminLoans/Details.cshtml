@model Kutuphane.Application.Dtos.LoanDtos.ResultLoanDto

@{
    ViewData["Title"] = "İşlem Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Durum Belirleme
    bool isReturned = Model.ReturnDate.HasValue;
    bool isOverdue = !isReturned && Model.DueDate < DateTime.Now;

    string statusColor = isReturned ? "success" : (isOverdue ? "danger" : "primary");
    string statusText = isReturned ? "İade Edildi" : (isOverdue ? "Gecikmiş" : "Devam Ediyor");
    string statusIcon = isReturned ? "bi-check-circle-fill" : (isOverdue ? "bi-exclamation-triangle-fill" : "bi-hourglass-split");
}

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">İşlem #@Model.Id</h2>
                    <span class="text-muted small">Kayıt Tarihi: @Model.LoanDate?.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
                <a asp-action="Index" class="btn btn-light border rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Listeye Dön
                </a>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                <div class="bg-@statusColor text-white text-center py-2 fw-bold text-uppercase letter-spacing-1">
                    <i class="bi @statusIcon me-2"></i> @statusText
                </div>

                <div class="card-body p-5">
                    <div class="row g-5">

                        <div class="col-md-6 border-end">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Üye Bilgileri</h6>
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold text-dark mb-0">@Model.MemberName</h5>
                                    <span class="badge bg-light text-dark border">ID: @Model.MemberId</span>
                                </div>
                            </div>

                            <div class="d-flex gap-2 mt-4">
                                <a asp-controller="AdminMembers" asp-action="Details" asp-route-id="@Model.MemberId" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    Profil
                                </a>
                                <a asp-controller="AdminContact" asp-action="Create" asp-route-toMemberId="@Model.MemberId" class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                    Mesaj At
                                </a>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Kitap Bilgileri</h6>
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-book-fill fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold text-dark mb-0">@Model.BookTitle</h5>
                                    <span class="badge bg-light text-dark border">Kopya: @Model.CopyNumber</span>
                                </div>
                            </div>
                            <div class="alert alert-light border small mt-3 mb-0">
                                <i class="bi bi-sticky-fill text-warning me-1"></i>
                                <strong>Not:</strong> @(string.IsNullOrEmpty(Model.Notes) ? "-" : Model.Notes)
                            </div>
                        </div>

                    </div>

                    <hr class="my-4 opacity-10">

                    <div class="row text-center">
                        <div class="col-4">
                            <small class="text-muted d-block mb-1">Veriliş Tarihi</small>
                            <span class="fw-bold fs-5 text-dark">@Model.LoanDate?.ToString("dd.MM.yyyy")</span>
                        </div>
                        <div class="col-4 border-start border-end">
                            <small class="text-muted d-block mb-1">Son Teslim</small>
                            <span class="fw-bold fs-5 @(isOverdue ? "text-danger" : "text-dark")">@Model.DueDate?.ToString("dd.MM.yyyy")</span>
                        </div>
                        <div class="col-4">
                            <small class="text-muted d-block mb-1">İade Tarihi</small>
                            @if (isReturned)
                            {
                                <span class="fw-bold fs-5 text-success">@Model.ReturnDate?.ToString("dd.MM.yyyy")</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary opacity-50">Bekleniyor</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (!isReturned)
            {
                <div class="card border-0 shadow-sm rounded-4 bg-white border-top border-4 border-warning">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <i class="bi bi-box-arrow-in-down-left fs-5"></i>
                            </div>
                            <h5 class="fw-bold mb-0">İade İşlemi</h5>
                        </div>

                        <p class="text-muted small">Kitap kütüphaneye geri getirildiyse aşağıdaki butona basarak işlemi sonlandırabilirsiniz.</p>

                        <form asp-action="ReturnBook" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div class="mb-3">
                                <textarea name="returnNotes" class="form-control bg-light" rows="2" placeholder="Varsa iade notu (Örn: Cildi hasarlı, geç teslim)..."></textarea>
                            </div>

                            <button type="submit" class="btn btn-warning w-100 py-3 fw-bold shadow-sm" onclick="return confirm('Bu kitabı iade almak istediğinize emin misiniz?');">
                                <i class="bi bi-check-circle-fill me-2"></i> İADEYİ ONAYLA VE BİTİR
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm rounded-4 bg-success bg-opacity-10 border border-success">
                    <div class="card-body p-4 text-center text-success">
                        <i class="bi bi-check-circle-fill display-4 mb-3"></i>
                        <h4>İşlem Tamamlandı</h4>
                        <p class="mb-0">Bu kitap başarıyla iade alınmıştır. Yapılacak bir işlem yok.</p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>