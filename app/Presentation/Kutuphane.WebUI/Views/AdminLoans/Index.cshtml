@model IEnumerable<Kutuphane.Application.Dtos.LoanDtos.ResultLoanDto>

@{
    ViewData["Title"] = "Ödünç İşlemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Controller'dan filtrelenmiş liste gelir, burada ikiye ayrılır.
    var activeLoans = Model.Where(x => !x.ReturnDate.HasValue).OrderBy(x => x.DueDate).ToList();
    var pastLoans = Model.Where(x => x.ReturnDate.HasValue).OrderByDescending(x => x.ReturnDate).ToList();
}

<div class="container-fluid px-4 py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="bi bi-arrow-left-right me-2 text-primary"></i>Ödünç Yönetimi</h2>
            <p class="text-muted small mb-0">Kitap alış-veriş işlemlerini buradan takip edebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm hover-scale">
            <i class="bi bi-plus-lg me-2"></i>Yeni Ödünç Ver
        </a>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body py-3">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-primary">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="searchTerm" class="form-control border-start-0 ps-0"
                           placeholder="Üye Adı, Kitap Adı veya Üye No ile arama yapın..."
                           value="@ViewBag.SearchTerm">
                    
                    <button class="btn btn-primary px-4" type="submit">Ara</button>

                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                    {
                        <a asp-action="Index" class="btn btn-outline-danger" title="Aramayı Temizle">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-bottom p-0">
            <ul class="nav nav-tabs nav-fill border-0" id="loanTabs" role="tablist">

                <li class="nav-item" role="presentation">
                    <button class="nav-link custom-tab active py-3 fw-bold"
                            id="active-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#active-content"
                            type="button"
                            role="tab">
                        <i class="bi bi-hourglass-split me-2"></i>Devam Edenler
                        <span class="badge bg-primary bg-opacity-10 text-primary ms-2 rounded-pill">@activeLoans.Count</span>
                    </button>
                </li>

                <li class="nav-item" role="presentation">
                    <button class="nav-link custom-tab py-3 fw-bold"
                            id="history-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#history-content"
                            type="button"
                            role="tab">
                        <i class="bi bi-clock-history me-2"></i>İşlem Geçmişi
                        <span class="badge bg-secondary bg-opacity-10 text-secondary ms-2 rounded-pill">@pastLoans.Count</span>
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-0">
            <div class="tab-content" id="loanTabsContent">

                <div class="tab-pane fade show active" id="active-content" role="tabpanel">
                    @if (activeLoans.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-uppercase small text-muted">
                                    <tr>
                                        <th class="ps-4">Durum</th>
                                        <th>Üye</th>
                                        <th>Kitap</th>
                                        <th>Tarihler</th>
                                        <th class="text-end pe-4">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in activeLoans)
                                    {
                                        bool isOverdue = item.DueDate < DateTime.Now;
                                        <tr onclick="window.location.href='@Url.Action("Details", new { id = item.Id })'" style="cursor: pointer;">
                                            <td class="ps-4">
                                                @if (isOverdue)
                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Gecikmiş</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Normal</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-bold text-dark">@item.MemberName</div>
                                                <div class="small text-muted">ID: #@item.MemberId</div>
                                            </td>
                                            <td>
                                                <div class="fw-bold text-dark">@item.BookTitle</div>
                                                <div class="small text-muted">Kopya: @item.CopyNumber</div>
                                            </td>
                                            <td>
                                                <div class="small text-muted">Veriliş: @item.LoanDate?.ToString("dd.MM.yyyy")</div>
                                                <div class="small fw-bold @(isOverdue ? "text-danger" : "text-dark")">
                                                    Son: @item.DueDate?.ToString("dd.MM.yyyy")
                                                </div>
                                            </td>
                                            <td class="text-end pe-4">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border text-primary rounded-pill">
                                                    <i class="bi bi-eye-fill"></i> İncele
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-search fs-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-2">"@ViewBag.SearchTerm" kriterine uygun aktif ödünç bulunamadı.</p>
                        </div>
                    }
                </div>

                <div class="tab-pane fade" id="history-content" role="tabpanel">
                     @if (!pastLoans.Any())
                     {
                        <div class="text-center py-5">
                            <p class="text-muted mt-2">Kriterlere uygun geçmiş işlem bulunamadı.</p>
                        </div>
                     }
                     else 
                     {
                         @Html.Raw("")
                         <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <tbody>
                                    @foreach (var item in pastLoans)
                                    {
                                        <tr class="opacity-75" onclick="window.location.href='@Url.Action("Details", new { id = item.Id })'" style="cursor: pointer;">
                                            <td class="ps-4"><span class="badge bg-secondary bg-opacity-10 text-secondary border px-3 py-2 rounded-pill">Tamamlandı</span></td>
                                            <td><div class="fw-bold">@item.MemberName</div></td>
                                            <td><div class="fw-bold">@item.BookTitle</div></td>
                                            <td><span class="fw-bold text-success">@item.ReturnDate?.ToString("dd.MM.yyyy")</span></td>
                                            <td class="text-end pe-4">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border text-secondary rounded-pill">Detay</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                         </div>
                     }
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Varsayılan Tab Stili (Pasif Hali) */
    .custom-tab {
        color: #6c757d; /* Gri renk */
        background-color: transparent !important;
        border: none !important;
        border-bottom: 3px solid transparent !important; /* Çizgi var ama görünmez */
        transition: all 0.3s ease;
    }

        /* Üzerine gelince */
        .custom-tab:hover {
            color: #0d6efd; /* Primary mavi */
            background-color: rgba(13, 110, 253, 0.05) !important;
        }

        /* AKTİF OLUNCA (Seçili Sekme) */
        .custom-tab.active {
            color: #0d6efd !important; /* Mavi yazı */
            border-bottom: 3px solid #0d6efd !important; /* Mavi ALT ÇİZGİ */
            background-color: transparent !important;
        }

    .hover-scale:hover {
        transform: scale(1.05);
        transition: transform 0.2s;
    }
</style>