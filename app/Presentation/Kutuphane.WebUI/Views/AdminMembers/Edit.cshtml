@model Kutuphane.Application.Dtos.MemberDtos.UpdateMemberDto

@{
    ViewData["Title"] = "Üye Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var memberId = ViewBag.MemberId;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-warning bg-opacity-75 text-white py-3">
                <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Üye Bilgilerini Düzenle</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" asp-route-id="@memberId" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-bold small text-muted">AD</label>
                            <input asp-for="FirstName" class="form-control form-control-lg bg-light" placeholder="Ad" required />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-bold small text-muted">SOYAD</label>
                            <input asp-for="LastName" class="form-control form-control-lg bg-light" placeholder="Soyad" required />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-bold small text-muted">E-POSTA</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control bg-light" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label fw-bold small text-muted">TELEFON</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-telephone"></i></span>
                                <input asp-for="Phone" class="form-control bg-light" required />
                            </div>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label fw-bold small text-muted">DURUM</label>
                            <select asp-for="Status" class="form-select bg-light">
                                <option value="Aktif">Aktif</option>
                                <option value="Pasif">Pasif (Banlı)</option>
                            </select>
                            <div class="form-text text-warning"><i class="bi bi-info-circle"></i> 'Pasif' seçilirse üye kalıcı banlanır.</div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label fw-bold small text-muted">DOĞUM TARİHİ</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control bg-light" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-bold small text-muted">ADRES</label>
                        <textarea asp-for="Address" class="form-control bg-light" rows="2"></textarea>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label fw-bold small text-muted">NOTLAR</label>
                        <textarea asp-for="Notes" class="form-control bg-light" rows="3" placeholder="Yönetici notları..."></textarea>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">İptal</a>
                        <button type="submit" class="btn btn-warning px-5 rounded-pill fw-bold shadow-sm hover-scale">
                            <i class="bi bi-save me-2"></i>Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }

        .hover-scale:hover {
            transform: scale(1.02);
        }

    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
</style>