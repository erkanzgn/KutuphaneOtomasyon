@model Kutuphane.Application.Dtos.MemberDtos.MemberWithLoansDto

@{
    ViewData["Title"] = "Üye Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Ceza ve Ban Kontrolleri
    bool isPassive = Model.Status == "Pasif";
    bool hasActiveLoans = Model.ActiveLoans.Any();
    bool isTemporalBanned = Model.BanExpirationDate.HasValue && Model.BanExpirationDate > DateTime.Now;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0"><i class="bi bi-person-lines-fill text-primary me-2"></i>Üye Profili</h3>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3"><i class="bi bi-arrow-left me-1"></i>Listeye Dön</a>
</div>

@if (isPassive && hasActiveLoans)
{
    <div class="alert alert-danger border-start border-4 border-danger shadow-sm mb-4">
        <div class="d-flex align-items-center">
            <div class="me-3">
                <span class="spinner-grow text-danger spinner-grow-sm" role="status"></span>
                <i class="bi bi-exclamation-triangle-fill fs-2 text-danger"></i>
            </div>
            <div>
                <h5 class="fw-bold mb-1 text-danger">Kritik Durum!</h5>
                <p class="mb-0 text-dark">
                    Bu üye <strong>BANLANMIŞTIR (Pasif)</strong> ancak üzerinde hala iade edilmemiş
                    <strong class="text-danger border-bottom border-danger">@Model.ActiveLoans.Count() adet kitap</strong> bulunmaktadır.
                </p>
                <small class="text-muted fst-italic">
                    <i class="bi bi-info-circle me-1"></i>Üye silinemez. Lütfen önce kitapları teslim alınız ("İade Et" butonu aktiftir).
                </small>
            </div>
        </div>
    </div>
}
else if (isTemporalBanned)
{
    <div class="alert alert-warning border-start border-4 border-warning shadow-sm mb-4 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <i class="bi bi-hourglass-split fs-2 me-3 text-warning"></i>
            <div>
                <h5 class="fw-bold mb-1">Geçici Erişim Kısıtlaması</h5>
                <span>
                    Bu üye <strong>@Model.BanExpirationDate.Value.ToString("dd.MM.yyyy HH:mm")</strong> tarihine kadar kitap alamaz.
                </span>
            </div>
        </div>
        <form asp-action="RemoveBan" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-light text-warning fw-bold border shadow-sm" onclick="return confirm('Süreli cezayı kaldırmak istediğinize emin misiniz?');">
                <i class="bi bi-unlock-fill me-2"></i>Affet
            </button>
        </form>
    </div>
}
else if (isPassive)
{
    <div class="alert alert-secondary border-start border-4 border-secondary shadow-sm mb-4 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <i class="bi bi-slash-circle-fill fs-2 me-3"></i>
            <div>
                <h5 class="fw-bold mb-1">Hesap Dondurulmuş</h5>
                <span>Bu üyelik pasif durumdadır. Kitap borcu bulunmamaktadır.</span>
            </div>
        </div>
        <form asp-action="RemoveBan" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success fw-bold shadow-sm" onclick="return confirm('Üyeliği tekrar Aktif yapmak istediğinize emin misiniz?');">
                <i class="bi bi-check-circle-fill me-2"></i>Aktifleştir
            </button>
        </form>
    </div>
}

<div class="row g-4">
    <div class="col-md-4 col-lg-3">
        <div class="card shadow-sm border-0 rounded-4 text-center h-100">
            <div class="card-body p-4">
                <div class="position-relative d-inline-block">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3 text-primary fw-bold border"
                         style="width: 100px; height: 100px; font-size: 2.5rem;">
                        @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                    </div>
                    @if (isPassive)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light">
                            PASİF
                        </span>
                    }
                </div>

                <h4 class="fw-bold mb-1">@Model.FullName</h4>
                <p class="text-muted mb-2">@Model.MemberNumber</p>

                <hr class="my-4 opacity-25">

                <div class="text-start small">
                    <div class="mb-2 text-truncate" title="@Model.Email"><i class="bi bi-envelope me-2 text-primary"></i> @Model.Email</div>
                    <div class="mb-2"><i class="bi bi-telephone me-2 text-primary"></i> @Model.Phone</div>
                    <div class="mb-2"><i class="bi bi-calendar3 me-2 text-primary"></i> @Model.RegistrationDate?.ToShortDateString()</div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil me-2"></i>Düzenle</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 col-lg-9">
        <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-header bg-white border-bottom p-0">
                <ul class="nav nav-tabs card-header-tabs m-0 px-3 pt-3 border-bottom-0" id="myTab" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active fw-bold" id="active-tab" data-bs-toggle="tab" data-bs-target="#active-loans" type="button">
                            Aktif Ödünçler <span class="badge bg-primary ms-1 rounded-pill">@Model.ActiveLoans.Count()</span>
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link fw-bold text-secondary" id="history-tab" data-bs-toggle="tab" data-bs-target="#loan-history" type="button">
                            Geçmiş İşlemler
                        </button>
                    </li>
                </ul>
            </div>

            <div class="card-body p-0">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="active-loans">
                        @if (Model.ActiveLoans.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="ps-4">Kitap</th>
                                            <th>Veriliş</th>
                                            <th>Son Tarih</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var loan in Model.ActiveLoans)
                                        {
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="fw-bold">@loan.BookTitle</div>
                                                    <small class="text-muted">Kopya: @loan.CopyNumber</small>
                                                </td>
                                                <td>@loan.LoanDate.Value.ToShortDateString()</td>
                                                <td>
                                                    @loan.DueDate.Value.ToShortDateString()
                                                    @if (loan.IsOverdue)
                                                    {
                                                        <div class="badge bg-danger ms-1">@loan.OverdueDays Gün Gecikti!</div>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-info text-dark">Ödünçte</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center p-5 text-muted">
                                <i class="bi bi-journal-check fs-1"></i>
                                <p class="mt-2">Bu üyenin üzerinde kitap bulunmuyor.</p>
                            </div>
                        }
                    </div>

                    <div class="tab-pane fade" id="loan-history">
                        @if (Model.LoanHistory.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-striped align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="ps-4">Kitap</th>
                                            <th>Alış</th>
                                            <th>İade</th>
                                            <th>Not</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var loan in Model.LoanHistory)
                                        {
                                            <tr>
                                                <td class="ps-4">@loan.BookTitle</td>
                                                <td>@loan.LoanDate.Value.ToShortDateString()</td>
                                                <td>@loan.ReturnDate?.ToShortDateString()</td>
                                                <td class="text-muted small">@loan.Notes</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center p-5 text-muted">
                                <i class="bi bi-clock fs-1"></i>
                                <p class="mt-2">Geçmiş işlem kaydı bulunamadı.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>