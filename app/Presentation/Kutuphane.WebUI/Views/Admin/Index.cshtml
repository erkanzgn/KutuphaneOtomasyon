@model Kutuphane.WebUI.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Genel Bakış</h3>
        <p class="text-muted small mb-0">Kütüphane durum raporu ve istatistikler.</p>
    </div>

    <button class="btn btn-white position-relative shadow-sm border" type="button" data-bs-toggle="collapse" data-bs-target="#notificationArea" aria-expanded="false">
        <i class="bi bi-bell-fill text-warning"></i>
        <span class="d-none d-md-inline ms-2 text-secondary">Mesajlar</span>
        @if (Model.UnreadMessageCount > 0)
        {
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @Model.UnreadMessageCount
                <span class="visually-hidden">okunmamış mesaj</span>
            </span>
        }
    </button>
</div>

<div class="collapse mb-4" id="notificationArea">
    <div class="card border-0 shadow-sm border-top border-4 border-warning">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h6 class="mb-0 fw-bold text-warning"><i class="bi bi-envelope-paper"></i> Okunmamış Mesajlar</h6>
        </div>
        <div class="list-group list-group-flush">
            @if (Model.RecentMessages != null && Model.RecentMessages.Any())
            {
                @foreach (var msg in Model.RecentMessages)
                {
                    <a asp-controller="AdminContact" asp-action="Details" asp-route-id="@msg.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                        <div>
                            <div class="d-flex w-100 justify-content-between">
                                <strong class="mb-1 text-dark">@msg.Name</strong>
                                <small class="text-muted">@msg.CreatedDate.ToString("HH:mm")</small>
                            </div>
                            <p class="mb-1 small text-secondary">@msg.Subject</p>
                        </div>
                        <span class="badge bg-warning-subtle text-warning rounded-pill"><i class="bi bi-circle-fill small"></i></span>
                    </a>
                }
                <a asp-controller="AdminContact" asp-action="Index" class="list-group-item list-group-item-action px-4 py-3 text-center text-primary small fw-bold">
                    Tüm Mesajları Görüntüle <i class="bi bi-arrow-right"></i>
                </a>
            }
            else
            {
                <div class="p-3 text-center text-muted">Okunmamış yeni mesaj yok.</div>
            }
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm border-start border-4 border-primary position-relative hover-lift">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted small text-uppercase fw-bold">Toplam Kitap</span>
                        <h2 class="fw-bold mb-0 text-dark">@Model.Stats.TotalBooks</h2>
                    </div>
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                        <i class="bi bi-journal-album fs-3"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle">
                        <i class="bi bi-layers"></i> @Model.Stats.AvailableCopies Raf
                    </span>
                    <span class="text-muted ms-1">/ @Model.Stats.TotalCopies Kopya</span>
                </div>
                <a asp-controller="AdminBooks" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm border-start border-4 border-success position-relative hover-lift">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted small text-uppercase fw-bold">Toplam Üye</span>
                        <h2 class="fw-bold mb-0 text-dark">@Model.Stats.TotalMembers</h2>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-3 p-3">
                        <i class="bi bi-people fs-3"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="text-success fw-bold"><i class="bi bi-check-circle"></i> @Model.Stats.ActiveMembers</span>
                    <span class="text-muted">Aktif Kullanıcı</span>
                </div>
                <a asp-controller="AdminMembers" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm border-start border-4 border-warning position-relative hover-lift">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted small text-uppercase fw-bold">Dışarıdaki Kitap</span>
                        <h2 class="fw-bold mb-0 text-dark">@Model.Stats.ActiveLoans</h2>
                    </div>
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-3 p-3">
                        <i class="bi bi-book fs-3"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="text-muted">Şu an okunuyor...</span>
                </div>
                <a asp-controller="AdminLoans" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm border-start border-4 border-danger position-relative hover-lift">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted small text-uppercase fw-bold">Gecikmiş İade</span>
                        <h2 class="fw-bold mb-0 text-danger">@Model.Stats.OverdueLoans</h2>
                    </div>
                    <div class="icon-shape bg-danger bg-opacity-10 text-danger rounded-3 p-3">
                        <i class="bi bi-exclamation-triangle fs-3"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="badge bg-danger text-white">Acil Müdahale</span>
                </div>
                <a asp-controller="AdminLoans" asp-action="Overdue" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom border-light">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-clock-history text-danger me-2"></i>Gecikme Raporu</h5>
                <a asp-controller="AdminLoans" asp-action="Overdue" class="btn btn-sm btn-light border text-danger">
                    Tümünü Gör <i class="bi bi-arrow-right-short"></i>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3 border-0">Üye Bilgisi</th>
                            <th class="py-3 border-0">Kitap</th>
                            <th class="py-3 border-0">Son Tarih</th>
                            <th class="py-3 border-0">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model.OverdueLoans.Take(5))
                        {
                            // SATIRA TIKLAMA ÖZELLİĞİ EKLENDİ (onclick)
                            <tr style="cursor: pointer;" onclick="window.location.href='@Url.Action("Details", "AdminLoans", new { id = loan.LoanId })'">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <span class="fw-bold">@loan.MemberName.Substring(0, 1)</span>
                                        </div>
                                        <div class="ms-3">
                                            <h6 class="mb-0 fw-bold text-dark">@loan.MemberName</h6>
                                            <small class="text-muted">@loan.MemberPhone</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="d-block text-dark fw-medium">@loan.BookTitle</span>
                                    <small class="text-muted">Kopya: #@loan.CopyNumber</small>
                                </td>
                                <td>@loan.DueDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2 rounded-pill">
                                        <i class="bi bi-hourglass-bottom me-1"></i> @loan.OverdueDays Gün
                                    </span>
                                </td>
                            </tr>
                        }
                        @if (!Model.OverdueLoans.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-emoji-sunglasses fs-1 d-block mb-3 text-success"></i>
                                    <span class="d-block">Harika! Gecikmiş kitap bulunmuyor.</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-primary text-white py-3 d-flex align-items-center">
                <i class="bi bi-trophy-fill me-2"></i>
                <h5 class="mb-0 fw-bold">En Çok Okunanlar</h5>
            </div>
            <div class="list-group list-group-flush">
                @{
                    int rank = 1;
                }
                @foreach (var book in Model.PopularBooks)
                {
                    // BURAYA DA TIKLAMA EKLENEBİLİR (KİTAP LİSTESİNE GİDER)
                    <a asp-controller="AdminBooks" asp-action="Index" asp-route-searchTerm="@book.Title" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 border-bottom-light">
                        <div class="d-flex align-items-center">
                            <span class="fw-bold text-secondary me-3 fs-5" style="width: 20px;">@(rank++)</span>
                            <div>
                                <h6 class="mb-0 fw-bold text-dark">@book.Title</h6>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                        <span class="badge bg-light text-primary border rounded-pill px-3">@book.BorrowCount ödünç</span>
                    </a>
                }
                @if (!Model.PopularBooks.Any())
                {
                    <div class="p-4 text-center text-muted">Veri yok.</div>
                }
                <div class="card-footer bg-white border-0 text-center py-3">
                    <a asp-action="Stats" class="btn btn-sm btn-outline-primary rounded-pill px-4">
                        İstatistik Detayları
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Kartların üzerine gelince hafif yukarı kalkması için */
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
</style>