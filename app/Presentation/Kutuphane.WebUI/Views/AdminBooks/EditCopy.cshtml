@model Kutuphane.Application.Dtos.CopyDtos.UpdateCopyDto

@{
    ViewData["Title"] = "Kopya Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

   
    var copyId = ViewBag.CopyId;    
    var bookId = ViewBag.BookId;     
    var copyNumber = ViewBag.CopyNumber;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-warning text-dark py-3 d-flex align-items-center">
                    <i class="bi bi-pencil-square fs-4 me-2"></i>
                    <div>
                        <h5 class="mb-0 fw-bold">Kopya Düzenle</h5>
                        <small class="text-dark opacity-75">Kopya No: #@copyNumber</small>
                    </div>
                </div>

                <div class="card-body p-4">

                    <form asp-action="EditCopy" asp-route-id="@copyId" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-4" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="ShelfLocation" class="form-control" placeholder="Raf Konumu" />
                            <label asp-for="ShelfLocation">Raf Konumu (Örn: A-12)</label>
                            <span asp-validation-for="ShelfLocation" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Condition" class="form-select">
                                <option value="Yeni">Yeni</option>
                                <option value="İyi">İyi</option>
                                <option value="Yıpranmış">Yıpranmış</option>
                                <option value="Hasarlı">Hasarlı</option>
                                <option value="Cildi Bozuk">Cildi Bozuk</option>
                            </select>
                            <label asp-for="Condition">Fiziksel Durum</label>
                            <span asp-validation-for="Condition" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="Status" class="form-select">
                                <option value="Rafta">Rafta (Müsait)</option>
                                <option value="Bakımda">Bakımda / Tamirde</option>
                                <option value="Kayıp">Kayıp</option>
                                <option value="Oduncte" class="bg-light text-muted" disabled>Ödünçte (Sistem Tarafından Yönetilir)</option>
                            </select>
                            <label asp-for="Status">Kopya Durumu</label>
                            <span asp-validation-for="Status" class="text-danger small"></span>

                            <div class="form-text mt-2 text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Eğer kitap "Ödünçte" ise durumunu buradan değiştiremezsiniz. Lütfen "Ödünç İşlemleri" menüsünden iade alınız.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@bookId" class="btn btn-light border px-4">
                                Vazgeç
                            </a>

                            <button type="submit" class="btn btn-warning fw-bold px-4 shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> Değişiklikleri Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}