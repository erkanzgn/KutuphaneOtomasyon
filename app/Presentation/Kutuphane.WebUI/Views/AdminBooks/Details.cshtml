@model Kutuphane.WebUI.Models.ViewModels.BookAdminDetailsViewModel

@{
    ViewData["Title"] = "Kitap Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // İstatistikler
    var totalCopies = Model.Copies.Count();
    var availableCopies = Model.Copies.Count(c => c.Status == "Rafta");
    var borrowedCopies = Model.Copies.Count(c => c.Status == "Oduncte");
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm mt-3" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm mt-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid px-4 mt-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                <i class="bi bi-journal-bookmark-fill me-2 text-primary"></i>Kitap Yönetimi
            </h2>
            <p class="text-muted small mb-0">Kitap #@Model.Book.Id detayları ve stok durumu</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
            <i class="bi bi-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden sticky-top" style="top: 20px; z-index: 1;">
                <div class="card-body text-center p-4">
                    <div class="mb-4 position-relative d-inline-block">
                        @if (!string.IsNullOrEmpty(Model.Book.ImageUrl))
                        {
                            <img src="@Model.Book.ImageUrl" class="img-fluid rounded shadow-sm" style="max-height: 280px; width: auto;">
                        }
                        else
                        {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center shadow-sm mx-auto border" style="height: 280px; width: 190px;">
                                <i class="bi bi-book display-1 text-secondary opacity-25"></i>
                            </div>
                        }
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary border border-white shadow-sm">
                            @Model.Book.Category
                        </span>
                    </div>

                    <h4 class="fw-bold text-dark mb-1">@Model.Book.Title</h4>
                    <p class="text-muted fst-italic mb-4">@Model.Book.Author</p>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Book.Id" class="btn btn-warning fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Kitap Bilgilerini Düzenle
                        </a>
                    </div>
                </div>

                <div class="list-group list-group-flush small border-top">
                    <div class="list-group-item d-flex justify-content-between py-3 px-4">
                        <span class="text-muted fw-bold">ISBN</span>
                        <span class="font-monospace">@Model.Book.ISBN</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between py-3 px-4">
                        <span class="text-muted fw-bold">Yayın Yılı</span>
                        <span>@Model.Book.PublicationYear</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between py-3 px-4">
                        <span class="text-muted fw-bold">Yayınevi</span>
                        <span>@(Model.Book.Publisher ?? "-")</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between py-3 px-4">
                        <span class="text-muted fw-bold">Sayfa Sayısı</span>
                        <span>@Model.Book.PageCount</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 border-start border-4 border-primary">
                        <div class="card-body d-flex align-items-center p-3">
                            <div class="bg-primary bg-opacity-10 text-primary p-3 rounded me-3">
                                <i class="bi bi-layers-fill fs-3"></i>
                            </div>
                            <div>
                                <div class="small text-muted fw-bold text-uppercase">Toplam</div>
                                <h3 class="mb-0 fw-bold">@totalCopies</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                        <div class="card-body d-flex align-items-center p-3">
                            <div class="bg-success bg-opacity-10 text-success p-3 rounded me-3">
                                <i class="bi bi-check-circle-fill fs-3"></i>
                            </div>
                            <div>
                                <div class="small text-muted fw-bold text-uppercase">Rafta</div>
                                <h3 class="mb-0 fw-bold">@availableCopies</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
                        <div class="card-body d-flex align-items-center p-3">
                            <div class="bg-warning bg-opacity-10 text-warning p-3 rounded me-3">
                                <i class="bi bi-person-reading fs-3"></i>
                            </div>
                            <div>
                                <div class="small text-muted fw-bold text-uppercase">Ödünçte</div>
                                <h3 class="mb-0 fw-bold">@borrowedCopies</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-secondary"><i class="bi bi-list-stars me-2"></i>Kopya Listesi</h5>

                    <button type="button" class="btn btn-sm btn-success rounded-pill px-3 fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#addCopyModal">
                        <i class="bi bi-plus-lg me-1"></i> Stok Ekle
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary small text-uppercase">
                            <tr>
                                <th class="ps-4">Kopya No</th>
                                <th>Durum</th>
                                <th>Kondisyon</th>
                                <th>Raf</th>
                                <th class="text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var copy in Model.Copies)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="badge bg-light text-dark border font-monospace">#@copy.CopyNumber</span>
                                    </td>
                                    <td>
                                        @if (copy.Status == "Rafta")
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-2 py-1">Rafta</span>
                                        }
                                        else if (copy.Status == "Oduncte")
                                        {

                                            <span class="badge bg-warning bg-opacity-10 text-dark px-2 py-1">Ödünçte</span>
                                        }
                                        else if (copy.Status == "Kayıp")
                                        {

                                            <span class="badge bg-danger bg-opacity-10 text-danger px-2 py-1">Kayıp</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-secondary px-2 py-1">@copy.Status</span>
                                        }
                                    </td>
                                    <td class="small text-muted">@(string.IsNullOrEmpty(copy.Condition) ? "Belirtilmemiş" : copy.Condition)</td>
                                    <td class="fw-bold small text-dark">@(string.IsNullOrEmpty(copy.ShelfLocation) ? "-" : copy.ShelfLocation)</td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">

                                            <a asp-action="EditCopy" asp-route-id="@copy.Id" class="btn btn-sm btn-outline-warning border-0" title="Düzenle">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>

                                            <button type="button" class="btn btn-sm btn-outline-danger border-0" title="Sil" onclick="deleteCopy(@copy.Id, this)">
                                                <i class="bi bi-trash fs-5"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Copies.Any())
                            {
                                <tr><td colspan="5" class="text-center py-5 text-muted opacity-50">Henüz kopya eklenmemiş.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="addCopyModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title fw-bold"><i class="bi bi-plus-circle me-2"></i>Yeni Stok Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddCopies" method="post">
                <div class="modal-body p-4">
                    <input type="hidden" name="bookId" value="@Model.Book.Id" />

                    <div class="alert alert-light border small text-center mb-4">
                        <strong class="text-dark">@Model.Book.Title</strong> kitabına yeni kopyalar ekliyorsunuz.
                    </div>

                    <div class="row g-3">
                        <div class="col-6">
                            <label class="form-label fw-bold small text-muted">Adet</label>
                            <input type="number" name="count" class="form-control" value="1" min="1" max="50" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small text-muted">Raf Konumu</label>
                            <input type="text" name="shelfLocation" class="form-control" placeholder="Örn: A-12" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-link text-secondary text-decoration-none" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success px-4 rounded-pill fw-bold">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
     
        function deleteCopy(copyId, btn) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kopya kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/AdminBooks/DeleteCopy', { copyId: copyId }, function (response) {
                        if (response.success) {
                            
                            $(btn).closest('tr').fadeOut(300, function() { $(this).remove(); });

                          
                            const Toast = Swal.mixin({
                                toast: true, position: 'top-end', showConfirmButton: false, timer: 2000
                            });
                            Toast.fire({ icon: 'success', title: 'Kopya silindi' });

                            setTimeout(() => location.reload(), 1500);
                        } else {
                            Swal.fire('Hata', response.message, 'error');
                        }
                    });
                }
            });
        }
    </script>
}