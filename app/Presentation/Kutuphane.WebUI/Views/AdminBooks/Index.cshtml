@model IEnumerable<Kutuphane.Application.Dtos.BookDtos.ResultBookDto>

@{
    ViewData["Title"] = "Kitap Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .cursor-pointer {
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.075) !important;
    }

    .action-btn-group .btn {
        margin-right: 4px;
        border-radius: 6px;
    }
</style>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0"><i class="bi bi-journal-bookmark-fill"></i> Kitap Yönetimi</h2>
        <small class="text-muted">Kütüphanedeki tüm kitapların listesi ve stok durumları</small>
    </div>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-lg"></i> <span class="d-none d-md-inline">Yeni Kitap Ekle</span>
    </a>
</div>

<div class="card shadow-sm mb-4 border-0">
    <div class="card-body py-3">
        <form asp-action="Index" method="get">
            <div class="input-group input-group-lg">
                <span class="input-group-text bg-white border-end-0 text-primary">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" name="searchTerm" class="form-control border-start-0"
                       placeholder="Kitap Adı, ISBN veya Yazar Adı ile arama yapın..."
                       value="@ViewBag.SearchTerm">
                <button class="btn btn-primary px-4" type="submit">Ara</button>

                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                {
                    <a asp-action="Index" class="btn btn-outline-danger" title="Aramayı Temizle">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4" style="width: 80px;">Görsel</th>
                        <th>Kitap Bilgisi</th>
                        <th>Yazar & Kategori</th>
                        <th class="text-center">Yıl</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr class="cursor-pointer" onclick="window.location.href = '@Url.Action("Details", new { id = book.Id })'">
                            <td class="ps-4 py-3">
                                @if (!string.IsNullOrEmpty(book.ImageUrl))
                                {
                                    <img src="@book.ImageUrl" alt="Kapak" class="rounded shadow-sm" style="height: 70px; width: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light text-secondary d-flex align-items-center justify-content-center rounded border" style="height: 70px; width: 50px;">
                                        <i class="bi bi-book fs-4"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-dark fs-6">@book.Title</div>
                                <span class="text-muted small"><i class="bi bi-upc-scan"></i> @book.ISBN</span>
                            </td>
                            <td>
                                <div class="text-dark">@book.Author</div>
                                <span class="badge bg-info text-dark bg-opacity-10 border border-info px-2 mt-1">@book.Category</span>
                            </td>
                            <td class="text-center text-muted">@book.PublicationYear</td>
                            <td class="text-end pe-4 action-btn-group">
                                <button type="button" class="btn btn-sm btn-outline-success"
                                        onclick="event.stopPropagation();"
                                        data-bs-toggle="modal"
                                        data-bs-target="#addCopyModal"
                                        data-book-id="@book.Id"
                                        data-book-title="@book.Title"
                                        title="Stok Ekle">
                                    <i class="bi bi-plus-square-fill"></i>
                                </button>

                                <button type="button" class="btn btn-sm btn-outline-primary position-relative"
                                        onclick="event.stopPropagation(); loadCopies(@book.Id, '@book.Title')"
                                        title="Kopyaları Yönet">
                                    <i class="bi bi-list-ul"></i>
                                </button>

                                <div class="vr mx-2 align-middle"></div>

                                <a asp-action="Edit" asp-route-id="@book.Id"
                                   class="btn btn-sm btn-outline-warning"
                                   onclick="event.stopPropagation();"
                                   title="Kitabı Düzenle">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <form asp-action="Delete" method="post" style="display:inline;"
                                      onsubmit="event.stopPropagation(); return confirm('Bu kitabı ve tüm kopyalarını silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@book.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="event.stopPropagation();"
                                            title="Sil">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="bi bi-journal-x fs-1"></i>
                </div>
                <h5 class="text-muted">Kayıt bulunamadı.</h5>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="addCopyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-plus-square"></i> Stok Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AddCopies" method="post">
                <div class="modal-body p-4">
                    <input type="hidden" name="bookId" id="modalBookId" />

                    <div class="text-center mb-4">
                        <span class="badge bg-light text-dark border p-2 mb-2">Seçilen Kitap</span>
                        <h4 id="modalBookTitle" class="text-success fw-bold"></h4>
                    </div>

                    <div class="row g-3">
                        <div class="col-6">
                            <label class="form-label fw-bold">Adet</label>
                            <input type="number" name="count" class="form-control form-control-lg text-center" value="1" min="1" max="50" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold">Raf Konumu</label>
                            <input type="text" name="shelfLocation" class="form-control form-control-lg text-center" placeholder="Örn: A-1" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-link text-secondary text-decoration-none" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success px-4">Kaydet ve Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="copiesModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-list-check"></i> Kopya Yönetimi</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="p-3 bg-light border-bottom">
                    <h5 id="copiesModalTitle" class="text-primary fw-bold mb-0"></h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white sticky-top">
                            <tr class="text-muted small text-uppercase">
                                <th class="ps-3">Kopya No</th>
                                <th>Durum</th>
                                <th>Kondisyon</th>
                                <th>Raf</th>
                                <th class="text-end pe-3">İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="copiesTableBody">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Global değişken: O an işlem yapılan kitabın ID'si.
        var currentBookId = 0;

        // --- 1. KOPYALARI YÜKLEME (ANA FONKSİYON) ---
        function loadCopies(bookId, bookTitle) {
            currentBookId = bookId;
            $('#copiesModalTitle').text(bookTitle + " - Kopyalar");

            var myModal = new bootstrap.Modal(document.getElementById('copiesModal'));
            myModal.show();

            fetchCopies(bookId);
        }

        // --- 2. VERİLERİ ÇEKME VE TABLOYU DOLDURMA ---
        function fetchCopies(bookId) {
            $('#copiesTableBody').html('<tr><td colspan="5" class="text-center py-4"><div class="spinner-border text-primary" role="status"></div><div class="mt-2 text-muted">Yükleniyor...</div></td></tr>');

            $.get('/AdminBooks/GetCopies?bookId=' + bookId, function (data) {
                var html = '';
                if (data.length === 0) {
                    html = '<tr><td colspan="5" class="text-center text-muted py-4"><i class="bi bi-box-seam fs-3 d-block mb-2 opacity-25"></i>Hiç kopya bulunamadı.</td></tr>';
                } else {
                    $.each(data, function (index, item) {
                        var badgeClass = item.status === 'Rafta' ? 'bg-success' :
                                         item.status === 'Oduncte' ? 'bg-warning text-dark' :
                                         item.status === 'Kayıp' ? 'bg-danger' : 'bg-secondary';

                        // ÖNEMLİ DEĞİŞİKLİK BURADA:
                        // Düzenle butonu artık 'button' değil 'a' (link) etiketi.
                        // Ve doğrudan '/AdminBooks/EditCopy/ID' adresine gidiyor.

                        html += `<tr>
                                    <td class="ps-3 fw-bold font-monospace">#${item.copyNumber}</td>
                                    <td><span class="badge ${badgeClass}">${item.status}</span></td>
                                    <td class="text-muted small">${item.condition || '-'}</td>
                                    <td class="fw-bold text-dark">${item.shelfLocation || '-'}</td>
                                    <td class="text-end pe-3">
                                        <div class="btn-group">

                                            <a href="/AdminBooks/EditCopy/${item.id}"
                                               class="btn btn-sm btn-outline-warning border-0"
                                               title="Düzenle">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <button class="btn btn-sm btn-outline-danger border-0"
                                                    title="Sil"
                                                    onclick="deleteCopy(${item.id})">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                 </tr>`;
                    });
                }
                $('#copiesTableBody').html(html);
            }).fail(function() {
                $('#copiesTableBody').html('<tr><td colspan="5" class="text-center text-danger py-4">Veriler yüklenirken hata oluştu.</td></tr>');
            });
        }

        // --- 3. SİLME İŞLEMİ (AJAX) ---
        function deleteCopy(copyId) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kopya kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/AdminBooks/DeleteCopy', { copyId: copyId }, function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Silindi',
                                timer: 1000,
                                showConfirmButton: false
                            });
                            // Listeyi yenile
                            fetchCopies(currentBookId);
                        } else {
                            Swal.fire('Hata', response.message, 'error');
                        }
                    });
                }
            });
        }

        // Stok Ekleme Modalı (Otomatik Doldurma)
        var addCopyModal = document.getElementById('addCopyModal');
        addCopyModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var bookId = button.getAttribute('data-book-id');
            var bookTitle = button.getAttribute('data-book-title');

            var modalIdInput = addCopyModal.querySelector('#modalBookId');
            var modalTitleText = addCopyModal.querySelector('#modalBookTitle');

            modalIdInput.value = bookId;
            modalTitleText.textContent = bookTitle;
        });
    </script>
}