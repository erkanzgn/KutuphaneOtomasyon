@model Kutuphane.Application.Dtos.BookDtos.BookWithCopiesDto

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a asp-controller="Books" asp-action="Index" class="text-decoration-none">Kitaplar</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row gx-5">
        
        <div class="col-md-4 mb-4">
            <div class="position-sticky" style="top: 100px;">
                <div class="book-cover-wrapper shadow-lg rounded-3 overflow-hidden bg-white p-2 border">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid w-100 rounded-2">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded-2" style="height: 450px;">
                            <i class="bi bi-book display-1 text-secondary opacity-25"></i>
                        </div>
                    }
                </div>

                <div class="mt-4 d-grid gap-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (Model.AvailableCopies > 0)
                        {
                            <form asp-controller="Loans" asp-action="CreateLoan" method="post">
                                <input type="hidden" name="bookId" value="@Model.Id" />

                                <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm" onclick="return confirm('Bu kitabı ödünç almak istediğinize emin misiniz?');">
                                    <i class="bi bi-journal-plus me-2"></i> Ödünç Al
                                </button>
                            </form>
                            
                            <div class="alert alert-success text-center mb-0 py-2 mt-2 small">
                                <i class="bi bi-check-circle-fill"></i> <strong>@Model.AvailableCopies</strong> Adet Müsait
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg w-100" disabled>
                                <i class="bi bi-x-circle me-2"></i> Tükendi
                            </button>
                            <div class="alert alert-danger text-center mb-0 py-2 mt-2 small">
                                Şu an tüm kopyalar ödünçte.
                            </div>
                        }
                    }
                    else
                    {
                   
                        
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100 shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Giriş Yap ve Ödünç Al
                        </a>
                        <div class="text-center mt-2 text-muted small">
                            İşlem yapabilmek için üye girişi gereklidir.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="book-header mb-4">
                <span class="badge bg-primary px-3 py-2 rounded-pill mb-2">@Model.Category</span>
                <h1 class="display-5 fw-bold text-dark mb-2">@Model.Title</h1>
                <h4 class="text-muted fw-normal"><i class="bi bi-pen-fill fs-6 align-middle me-2"></i>@Model.Author</h4>
            </div>

            <div class="row g-3 mb-5">
                <div class="col-6 col-sm-3">
                    <div class="p-3 border rounded-3 text-center bg-light h-100">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Yayın Yılı</small>
                        <span class="fs-5 fw-bold">@Model.PublicationYear</span>
                    </div>
                </div>
                <div class="col-6 col-sm-3">
                    <div class="p-3 border rounded-3 text-center bg-light h-100">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Sayfa</small>
                        <span class="fs-5 fw-bold">@Model.PageCount</span>
                    </div>
                </div>
                <div class="col-6 col-sm-3">
                    <div class="p-3 border rounded-3 text-center bg-light h-100">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Dil</small>
                        <span class="fs-5 fw-bold">Türkçe</span>
                    </div>
                </div>
                <div class="col-6 col-sm-3">
                    <div class="p-3 border rounded-3 text-center bg-light h-100">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Yayınevi</small>
                        <span class="fs-6 fw-bold">@Model.Publisher</span>
                    </div>
                </div>
            </div>

            <div class="mb-5">
                <h5 class="fw-bold border-bottom pb-2 mb-3">Kitap Hakkında</h5>
                <p class="text-secondary" style="line-height: 1.8; font-size: 1.05rem;">
                    @(string.IsNullOrEmpty(Model.Description) ? "Bu kitap için henüz açıklama girilmemiş." : Model.Description)
                </p>
                <p class="text-muted small mt-3"><i class="bi bi-upc-scan"></i> ISBN: @Model.ISBN</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-layers"></i> Kopyalar ve Konumları</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th class="ps-4 py-3">Kopya No</th>
                                    <th>Raf Konumu</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var copy in Model.Copies)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold font-monospace">@copy.CopyNumber</td>
                                        <td><span class="badge bg-secondary text-light"><i class="bi bi-geo-alt-fill"></i> @copy.ShelfLocation</span></td>
                                        <td>
                                            @if (copy.Status == "Rafta")
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                                    <i class="bi bi-check-circle-fill me-1"></i> Müsait
                                                </span>
                                            }
                                            else if (copy.Status == "Oduncte")
                                            {
                                                <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">
                                                    <i class="bi bi-clock-history me-1"></i> Ödünçte
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">
                                                    @copy.Status
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>