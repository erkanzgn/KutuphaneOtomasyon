<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Paneli</title>

    <!-- Bootstrap 5 ve İkonlar -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Google Font (Inter - Daha Modern) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-bg: #111827; /* Koyu Mavi/Siyah */
            --sidebar-hover: #1f2937;
            --primary-color: #3b82f6; /* Modern Mavi */
            --text-muted: #9ca3af;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6; /* Açık Gri */
            margin: 0;
            overflow-x: hidden; /* Yatay scrollu engelle */
        }

        /* --- SIDEBAR (SABİT) --- */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            background-color: var(--sidebar-bg);
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1050; /* Modalların altında kalsın ama içeriğin üstünde */
            display: flex;
            flex-direction: column;
            transition: all 0.3s ease;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar .nav-link {
            color: var(--text-muted);
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 0.95rem;
            font-weight: 500;
            transition: all 0.2s;
            border-left: 3px solid transparent;
        }

        .sidebar .nav-link:hover {
            background-color: var(--sidebar-hover);
            color: #fff;
        }

        .sidebar .nav-link.active {
            background-color: rgba(59, 130, 246, 0.1);
            color: var(--primary-color);
            border-left-color: var(--primary-color);
        }

        /* --- ANA İÇERİK --- */
        .main-content {
            margin-left: var(--sidebar-width); /* Sidebar kadar boşluk bırak */
            padding: 2rem;
            min-height: 100vh;
            transition: all 0.3s ease;
        }

        /* --- ÜST BAR (NAVBAR) --- */
        .top-navbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        /* --- USER PANEL (ALTTA) --- */
        .user-panel {
            margin-top: auto;
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.1);
            background: rgba(0,0,0,0.2);
        }

        /* --- MOBİL UYUMLULUK --- */
        /* Media query diğer blokların dışında olmalı */
        media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%); /* Mobilde gizle */
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.show {
                transform: translateX(0);
            }
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="bg-primary rounded p-1">
                <i class="bi bi-book-half fs-4 text-white"></i>
            </div>
            <div>
                <h6 class="mb-0 fw-bold">LibraryPlus</h6>
                <small class="text-muted" style="font-size: 0.7rem;">Yönetim Paneli</small>
            </div>
        </div>

        <ul class="nav flex-column py-3">
            <li class="nav-item mb-4 px-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light w-100 btn-sm d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-arrow-left"></i> Siteye Dön
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-grid-1x2-fill"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="AdminBooks" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminBooks" ? "active" : "")">
                    <i class="bi bi-journal-bookmark-fill"></i> Kitaplar
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="AdminMembers" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminMembers" ? "active" : "")">
                    <i class="bi bi-people-fill"></i> Üyeler
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="AdminLoans" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminLoans" ? "active" : "")">
                    <i class="bi bi-arrow-left-right"></i> Ödünç İşlemleri
                </a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a asp-controller="AdminUsers" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminUsers" ? "active" : "")">
                        <i class="bi bi-shield-lock-fill"></i> Personel
                    </a>
                </li>
            }
            <li class="nav-item">
                <a asp-controller="AdminContact" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminContact" ? "active" : "")">
                    <i class="bi bi-envelope-fill"></i> Mesajlar
                </a>
            </li>
        </ul>

        <!-- User Dropdown (Altta) -->
        <div class="user-panel">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width:32px;height:32px;">
                        @User.Identity.Name?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="small">
                        <div class="fw-bold">@User.Identity.Name</div>
                        <div class="text-muted" style="font-size: 0.7rem;">Aktif</div>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark shadow">
                    <li><a class="dropdown-item" asp-controller="Members" asp-action="Profile"><i class="bi bi-person me-2"></i>Profilim</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i> Çıkış</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK ALANI -->
    <div class="main-content">
        
        <!-- Üst Bar -->
        <div class="top-navbar">
            <div>
                <h5 class="fw-bold text-dark mb-0">@ViewData["Title"]</h5>
                <small class="text-muted">Kütüphane Yönetim Paneli</small>
            </div>
            <div class="text-end">
                <span class="badge bg-light text-dark border px-3 py-2">
                    <i class="bi bi-calendar3 me-2"></i>@DateTime.Now.ToString("dd MMMM yyyy")
                </span>
            </div>
        </div>

        <!-- Sayfa İçeriği -->
        <main>
            <!-- 
                Hata ve Başarı Mesajları Artık Popup Olarak Gösteriliyor (Aşağıdaki Scriptte)
                Eski alert div'leri kaldırıldı.
            -->
            @RenderBody()
        </main>

    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bildirim Scripti (Popup/Toast) -->
    <script>
        $(document).ready(function() {
            // Başarı Mesajı (Yeşil)
            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: '@Html.Raw(TempData["Success"])',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    background: '#d1e7dd',
                    color: '#0f5132'
                });
                </text>
            }

            // Hata Mesajı (Kırmızı)
            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'error',
                    title: 'Hata',
                    text: '@Html.Raw(TempData["Error"])',
                    showConfirmButton: false,
                    timer: 4000,
                    timerProgressBar: true,
                    background: '#f8d7da',
                    color: '#842029'
                });
                </text>
            }
        });
    </script>

    <!-- MODAL & SCRIPTS SECTION -->
    @await RenderSectionAsync("Modals", required: false)
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>