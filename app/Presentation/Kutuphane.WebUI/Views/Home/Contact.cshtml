@using Kutuphane.Application.Dtos.ContactDtos
@using Kutuphane.Domain.Enums
@model ContactMessageDto

@{
    ViewData["Title"] = "Bize Ulaşın";
}

<div class="contact-bg-decor"></div>

<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5 position-relative">
    <div class="card contact-card border-0 shadow-lg overflow-hidden w-100" style="max-width: 1100px;">
        <div class="row g-0 h-100">
            
            <div class="col-lg-5 bg-primary text-white p-5 d-flex flex-column justify-content-between position-relative overflow-hidden">
                <div class="circle-decor circle-1"></div>
                <div class="circle-decor circle-2"></div>

                <div class="position-relative z-2">
                    <h2 class="fw-bold mb-4">İletişime Geçin</h2>
                    <p class="opacity-75 mb-5">
                        Kütüphane deneyiminizi iyileştirmek için buradayız.
                    </p>
                    <div class="d-flex flex-column gap-4">
                        <div class="d-flex align-items-start">
                            <div class="icon-square bg-white bg-opacity-10 rounded-3 p-3 me-3"><i class="bi bi-geo-alt fs-4"></i></div>
                            <div><h6 class="fw-bold mb-1">Adresimiz</h6><p class="mb-0 opacity-75 small">Ankara/Çankaya</p></div>
                        </div>
                        <div class="d-flex align-items-start">
                            <div class="icon-square bg-white bg-opacity-10 rounded-3 p-3 me-3"><i class="bi bi-envelope fs-4"></i></div>
                            <div><h6 class="fw-bold mb-1">E-Posta</h6><p class="mb-0 opacity-75 small">info@library.com</p></div>
                        </div>
                    </div>
                </div>
                
                <div class="position-relative z-2 mt-5">
                    <h6 class="fw-bold mb-3">Bizi Takip Edin</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="social-btn"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-btn"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="social-btn"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 bg-white p-5">
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="h-100 d-flex flex-column justify-content-center align-items-center text-center">
                        <div class="mb-4 p-4 bg-light rounded-circle shadow-sm"><i class="bi bi-lock-fill text-primary" style="font-size: 3rem;"></i></div>
                        <h3 class="fw-bold text-dark">Oturum Açmanız Gerekiyor</h3>
                        <p class="text-muted mb-4 px-4">Mesaj göndermek için lütfen giriş yapınız.</p>
                        <div class="d-flex gap-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary rounded-pill px-5 fw-bold">Giriş Yap</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="h-100">
                        <h3 class="fw-bold text-dark mb-4">Bize Yazın</h3>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 border-0 shadow-sm mb-4"></div>

                        <form asp-controller="Home" asp-action="Contact" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Name" class="form-control bg-light border-0" placeholder="Adınız" readonly>
                                        <label asp-for="Name">Ad Soyad</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control bg-light border-0" placeholder="Email" readonly>
                                        <label asp-for="Email">E-Posta</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="MessageType" class="form-select border-0 bg-white shadow-sm custom-input" 
                                                asp-items="Html.GetEnumSelectList<ContactMessageType>()">
                                            <option value="" selected disabled>Seçiniz...</option>
                                        </select>
                                        <label asp-for="MessageType">Mesaj Konusu</label>
                                    </div>
                                    <span asp-validation-for="MessageType" class="text-danger small ms-1"></span>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Subject" class="form-control border-0 bg-white shadow-sm custom-input" placeholder="Konu">
                                        <label asp-for="Subject">Başlık</label>
                                    </div>
                                    <span asp-validation-for="Subject" class="text-danger small ms-1"></span>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="Message" class="form-control border-0 bg-white shadow-sm custom-input" placeholder="Mesajınız" style="height: 150px"></textarea>
                                        <label asp-for="Message">Mesajınız</label>
                                    </div>
                                    <span asp-validation-for="Message" class="text-danger small ms-1"></span>
                                </div>

                                <div class="col-12 text-end mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm hover-scale">
                                        Gönder <i class="bi bi-send-fill ms-2"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Aynı CSS kodları buraya */
    .contact-bg-decor { position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: radial-gradient(circle at 10% 10%, rgba(13, 110, 253, 0.05), transparent 40%); z-index: -1; }
    .contact-card { border-radius: 20px; background: #fff; }
    .circle-decor { position: absolute; border-radius: 50%; background: rgba(255, 255, 255, 0.1); }
    .circle-1 { width: 200px; height: 200px; top: -50px; right: -50px; }
    .circle-2 { width: 150px; height: 150px; bottom: 20px; left: -50px; }
    .social-btn { width: 40px; height: 40px; border-radius: 50%; background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center; color: white; text-decoration: none; transition: all 0.3s; }
    .social-btn:hover { background: white; color: #0d6efd; transform: translateY(-3px); }
    .custom-input:focus { box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1) !important; }
    .hover-scale:hover { transform: scale(1.02); }
</style>