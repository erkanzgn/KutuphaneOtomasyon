@{
    ViewData["Title"] = "Sayfa Bulunamadı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center">
        <div class="mb-3">
            <i class="bi bi-signpost-split text-warning" style="font-size: 5rem;"></i>
        </div>

        <h1 class="display-1 fw-bold text-dark">404</h1>
        <h2 class="h4 text-muted mb-4">Aradığınız sayfa kaybolmuş olabilir</h2>

        <p class="text-muted mb-5" style="max-width: 500px; margin: 0 auto;">
            Gitmek istediğiniz sayfa silinmiş, taşınmış veya hiç var olmamış olabilir.
            Aşağıdaki butonları kullanarak yolunuzu bulabilirsiniz.
        </p>

        <div class="d-flex gap-3 justify-content-center">
            <a href="javascript:history.back()" class="btn btn-light border rounded-pill px-4">
                <i class="bi bi-arrow-return-left me-2"></i> Geri Dön
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="bi bi-house-door me-2"></i> Anasayfa
            </a>
        </div>
    </div>
</div>