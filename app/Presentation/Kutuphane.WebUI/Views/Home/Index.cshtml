@model Kutuphane.WebUI.Models.ViewModels.HomeIndexViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" style="height: 500px;">
            <img src="https://dusunbil.com/wp-content/uploads/2016/09/libraries.jpg" class="d-block w-100 h-100 object-fit-cover" style="filter: brightness(0.5);">
            <div class="carousel-caption d-none d-md-block text-start mb-5">
                <h1 class="display-4 fw-bold">Dünya Klasikleri</h1>
                <p class="lead">Edebiyatın dev yazarlarının eserlerini keşfedin.</p>
                <a asp-controller="Books" asp-action="Index" asp-route-category="Roman" class="btn btn-primary btn-lg mt-2">İncele</a>
            </div>
        </div>
        <div class="carousel-item" style="height: 500px;">
            <img src="https://serkanuygur.com.tr/wp-content/uploads/2018/03/serkan-uygur-tarihteki-bilim-insanlarc4b1.jpg?w=800" class="d-block w-100 h-100 object-fit-cover" style="filter: brightness(0.5);">
            <div class="carousel-caption d-none d-md-block text-start mb-5">
                <h1 class="display-4 fw-bold">Bilim ve Teknoloji</h1>
                <p class="lead">Çağımızın en önemli bilim insanlarından ilham alın.</p>
                <a asp-controller="Books" asp-action="Index" asp-route-category="Bilim" class="btn btn-primary btn-lg mt-2">Keşfet</a>
            </div>
        </div>
        <div class="carousel-item" style="height: 500px;">
            <img src="https://www.arzubiyiklioglu.com/wp-content/uploads/2018/06/felsefe.jpg" class="d-block w-100 h-100 object-fit-cover" style="filter: brightness(0.5);">
            <div class="carousel-caption d-none d-md-block text-start mb-5">
                <h1 class="display-4 fw-bold">Felsefe ve Düşünce</h1>
                <p class="lead">Zihinlerinizi açacak derin düşünce kitapları.</p>
                <a asp-controller="Books" asp-action="Index" asp-route-category="Felsefe" class="btn btn-primary btn-lg mt-2">Göz At</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3 class="mb-3 fw-bold text-dark">Ne okumak istersiniz?</h3>
                <form asp-controller="Books" asp-action="Index" method="get">
                    <div class="input-group input-group-lg shadow-sm">
                        <input type="text" name="searchTerm" class="form-control border-0" placeholder="Kitap adı, yazar veya ISBN arayın...">
                        <button class="btn btn-primary px-4" type="submit"><i class="bi bi-search"></i> Ara</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark m-0">Yeni Eklenenler</h2>
        <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary btn-sm">Tümünü Gör</a>
    </div>

    <div class="row gy-4">
        @foreach (var book in Model.NewBooks)
        {
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="position-relative overflow-hidden" style="height: 280px; background: #f8f9fa;">
                        @if (!string.IsNullOrEmpty(book.ImageUrl))
                        {
                            <img src="@book.ImageUrl" class="card-img-top w-100 h-100 object-fit-cover" alt="@book.Title">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 text-muted fs-1"><i class="bi bi-book"></i></div>
                        }
                        <span class="position-absolute top-0 end-0 badge bg-primary m-2">Yeni</span>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title text-truncate fw-bold">
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="text-dark text-decoration-none stretched-link">@book.Title</a>
                        </h6>
                        <p class="text-muted small mb-2">@book.Author</p>
                        <div class="d-flex justify-content-between align-items-center border-top pt-2">
                            <span class="badge bg-light text-dark border">@book.Category</span>
                            <small class="text-primary fw-bold">İncele <i class="bi bi-arrow-right"></i></small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="bg-white py-5">
    <div class="container">
        <h2 class="fw-bold text-dark mb-4">En Çok Okunanlar</h2>
        <div class="row gy-4">
            @foreach (var book in Model.PopularBooks)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="row g-0 h-100 align-items-center">
                            <div class="col-4 text-center">
                                @if (!string.IsNullOrEmpty(book.ImageUrl))
                                {
                                    <img src="@book.ImageUrl" class="img-fluid rounded-start p-2" style="max-height: 120px;">
                                }
                                else
                                {
                                    <i class="bi bi-book fs-1 text-secondary opacity-50"></i>
                                }
                            </div>
                            <div class="col-8">
                                <div class="card-body py-2">
                                    <h6 class="card-title text-truncate mb-1">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="text-dark text-decoration-none stretched-link">@book.Title</a>
                                    </h6>
                                    <small class="text-muted d-block mb-1">@book.Author</small>
                                    <span class="badge bg-warning text-dark" style="font-size: 0.65rem;">Popüler</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="container py-5">
    <h2 class="fw-bold text-center mb-5">Kategorilere Göz Atın</h2>
    <div class="row gy-4 justify-content-center">
        @foreach (var cat in Model.Categories)
        {
            <div class="col-lg-3 col-md-6">
                <div class="card text-center border-0 shadow-sm h-100 hover-card p-4">
                    <div class="mb-3">
                        <i class="bi @cat.IconCssClass fs-1 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">@cat.CategoryName</h5>
                    <p class="text-muted small">@cat.BookCount Kitap</p>
                    <a asp-controller="Books" asp-action="Index" asp-route-category="@cat.CategoryName" class="btn btn-outline-primary btn-sm stretched-link">Keşfet</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Basit Hover Efekti */
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .object-fit-cover {
        object-fit: cover;
    }
</style>