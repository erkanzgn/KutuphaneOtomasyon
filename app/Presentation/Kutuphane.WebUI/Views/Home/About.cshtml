@using Kutuphane.WebUI.Models.ViewModels
@model AboutViewModel

@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-primary text-white py-5 mb-5 text-center shadow-sm">
    <div class="container">
        <h1 class="display-4 fw-bold">Biz Kimiz?</h1>
        <p class="lead mb-0 opacity-75">Bilgiye açılan kapınız, modern kütüphane deneyimi.</p>
    </div>
</div>

<div class="container mb-5">

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 hover-lift">
                <div class="card-body p-5 text-center">
                    <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle d-inline-flex p-3 mb-4">
                        <i class="bi bi-lightbulb display-4"></i>
                    </div>
                    <h3 class="card-title fw-bold">Vizyonumuz</h3>
                    <p class="card-text text-muted mt-3">
                        Okuma kültürünü dijital çağın imkanlarıyla birleştirerek, bilgiye erişimi herkes için kolay, hızlı ve keyifli hale getirmek. Geleceğin kütüphane standartlarını bugünden oluşturmak.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 hover-lift">
                <div class="card-body p-5 text-center">
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle d-inline-flex p-3 mb-4">
                        <i class="bi bi-trophy display-4"></i>
                    </div>
                    <h3 class="card-title fw-bold">Misyonumuz</h3>
                    <p class="card-text text-muted mt-3">
                        Zengin kitap koleksiyonumuzu en güncel teknolojilerle yöneterek, üyelerimize kusursuz bir kütüphane deneyimi sunmak. Araştırmayı, öğrenmeyi ve kişisel gelişimi destekleyen bir platform olmak.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-light rounded-3 p-5 mb-5 shadow-inner">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="counter-box">
                    <i class="bi bi-book-half text-primary fs-1 mb-2"></i>
                    <h2 class="display-5 fw-bold text-dark count-up">@Model.TotalBooks</h2>
                    <p class="text-uppercase text-muted fw-bold small">Kitap Arşivi</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="counter-box border-start border-end">
                    <i class="bi bi-people text-primary fs-1 mb-2"></i>
                    <h2 class="display-5 fw-bold text-dark count-up">@Model.TotalMembers</h2>
                    <p class="text-uppercase text-muted fw-bold small">Mutlu Üye</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="counter-box">
                    <i class="bi bi-journal-bookmark-fill text-primary fs-1 mb-2"></i>
                    <h2 class="display-5 fw-bold text-dark count-up">@Model.ActiveLoans</h2>
                    <p class="text-uppercase text-muted fw-bold small">Aktif Okuma</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <h6 class="text-primary text-uppercase fw-bold ls-2">Kadro</h6>
        <h2 class="fw-bold mb-4">Ekibimizle Tanışın</h2>
    </div>

    <div class="row g-4 justify-content-center">
        @foreach (var member in Model.TeamMembers)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm text-center h-100 hover-scale">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center fw-bold shadow-sm"
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                @member.Name.Substring(0, 1).ToUpper()
                            </div>
                        </div>
                        <h5 class="fw-bold mb-1">@member.Name</h5>
                        <p class="text-muted small mb-3">@member.Title</p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="#" class="text-secondary"><i class="bi bi-linkedin"></i></a>
                            <a href="#" class="text-secondary"><i class="bi bi-envelope"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .hover-scale {
        transition: transform 0.3s ease;
    }

        .hover-scale:hover {
            transform: scale(1.02);
        }

    .shadow-inner {
        box-shadow: inset 0 0 20px rgba(0,0,0,0.05);
    }

    .ls-2 {
        letter-spacing: 2px;
    }
</style>
<script>
    $(document).ready(function () {
        $('.count-up').each(function () {
            var $this = $(this);
            jQuery({ Counter: 0 }).animate({ Counter: $this.text() }, {
                duration: 2000,
                easing: 'swing',
                step: function () {
                    $this.text(Math.ceil(this.Counter));
                }
            });
        });
    });
</script>
