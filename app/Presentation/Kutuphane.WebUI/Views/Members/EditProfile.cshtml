@model Kutuphane.Application.Dtos.MemberDtos.MemberProfileDto
@{
    ViewData["Title"] = "Bilgileri Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="card-header bg-white border-bottom pt-4 pb-3 px-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                            <i class="bi bi-pencil-square fs-4"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold text-primary">Profil Düzenle</h4>
                            <small class="text-muted">Kişisel bilgilerinizi güncel tutunuz.</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="EditProfile" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Username" class="form-label fw-bold text-muted small text-uppercase">Kullanıcı Adı</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-primary fw-bold">@@</span>
                                <input asp-for="Username" class="form-control bg-light border-start-0 ps-0" placeholder="Kullanıcı Adı" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                            <div class="form-text text-muted small">
                                <i class="bi bi-info-circle me-1"></i> Sisteme giriş yaparken kullandığınız kimliğinizdir.
                            </div>
                        </div>

                        <hr class="my-4 opacity-25">

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold text-muted small text-uppercase">Ad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-person"></i></span>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adınız" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold text-muted small text-uppercase">Soyad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-person-fill"></i></span>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadınız" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold text-muted small text-uppercase">E-Posta</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold text-muted small text-uppercase">Telefon</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="(5XX) XXX XX XX" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-bold text-muted small text-uppercase">Doğum Tarihi</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-calendar-date"></i></span>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold text-muted small text-uppercase">Adres</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-geo-alt"></i></span>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Açık adresiniz..."></textarea>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5">
                            <a asp-action="Profile" class="btn btn-light btn-lg px-4 rounded-pill border">
                                <i class="bi bi-x-lg me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill shadow hover-scale">
                                <i class="bi bi-check-lg me-2"></i>Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <style>
        .hover-scale {
            transition: transform 0.2s;
        }

            .hover-scale:hover {
                transform: scale(1.02);
            }

        /* Inputlara odaklanınca oluşan mavi çerçeveyi yumuşat */
        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            border-color: #86b7fe;
        }

        /* Input Group Text arka planını inputla uyumlu yap */
        .input-group-text {
            color: #6c757d;
        }
    </style>
}