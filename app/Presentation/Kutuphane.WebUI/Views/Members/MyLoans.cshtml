@using Kutuphane.Application.Dtos.LoanDtos
@model IEnumerable<ResultLoanDto>
@{
    ViewData["Title"] = "Ödünç Kitaplarım";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Controller'dan gelen verileri güvenli şekilde alıyoruz
    var activeLoans = ViewBag.ActiveLoans as IEnumerable<ResultLoanDto> ?? new List<ResultLoanDto>();
    var loanHistory = ViewBag.LoanHistory as IEnumerable<ResultLoanDto> ?? new List<ResultLoanDto>();
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark mb-1">Kitaplığım</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Members/Profile" class="text-decoration-none">Profilim</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ödünçlerim</li>
                </ol>
            </nav>
        </div>
        <a asp-controller="Books" asp-action="Index" asp-area="" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-search me-2"></i> Yeni Kitap Bul
        </a>
    </div>

    <div class="mb-5">
        <h4 class="fw-bold text-dark mb-3 d-flex align-items-center">
            <i class="bi bi-hourglass-split text-primary me-2"></i>
            Okumaya Devam Ettiklerim
            <span class="badge bg-primary rounded-pill ms-2 fs-6">@activeLoans.Count()</span>
        </h4>

        @if (!activeLoans.Any())
        {
            <div class="card border-0 shadow-sm bg-light text-center py-5">
                <div class="card-body">
                    <div class="display-1 text-muted opacity-25 mb-3"><i class="bi bi-book"></i></div>
                    <h5 class="text-muted">Şu an elinizde ödünç kitap bulunmuyor.</h5>
                    <p class="text-muted small">Kütüphane kataloğundan ilginizi çeken kitapları hemen ödünç alabilirsiniz.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var loan in activeLoans)
                {
                    // Tarih hesaplamaları
                    var isNearDue = loan.DueDate.HasValue && (loan.DueDate.Value - DateTime.Now).TotalDays <= 3 && !loan.IsOverdue;
                    var statusColor = loan.IsOverdue ? "danger" : (isNearDue ? "warning" : "success");
                    var statusText = loan.IsOverdue ? $"Gecikti ({loan.OverdueDays} Gün)" : (isNearDue ? "Teslim Yaklaştı" : "Devam Ediyor");

                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 position-relative overflow-hidden loan-card">
                            <div class="position-absolute start-0 top-0 bottom-0 bg-@statusColor" style="width: 5px;"></div>

                            <div class="card-body p-4 ps-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-@statusColor bg-opacity-10 text-@statusColor px-3 py-2 rounded-pill">
                                        @statusText
                                    </span>
                                    <small class="text-muted"><i class="bi bi-upc-scan me-1"></i> #@loan.CopyNumber</small>
                                </div>

                                <h5 class="fw-bold mb-1 text-truncate" title="@loan.BookTitle">@loan.BookTitle</h5>
                                <p class="text-muted mb-4 small">@loan.Author</p>

                                <div class="row g-2 mb-4 bg-light rounded-3 p-2 mx-0">
                                    <div class="col-6 text-center border-end">
                                        <small class="d-block text-muted" style="font-size: 0.7rem;">ALINDIĞI TARİH</small>
                                        <span class="fw-bold text-dark">@(loan.LoanDate.HasValue? loan.LoanDate.Value.ToString("dd MMM") : "-")</span>
                                    </div>
                                    <div class="col-6 text-center">
                                        <small class="d-block text-muted" style="font-size: 0.7rem;">SON TESLİM</small>
                                        <span class="fw-bold text-@statusColor">@(loan.DueDate.HasValue? loan.DueDate.Value.ToString("dd MMM") : "-")</span>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@loan.BookId" asp-area="" class="btn btn-outline-primary btn-sm rounded-pill flex-grow-1">
                                        Detay
                                    </a>

                                    <form asp-controller="Loans" asp-action="ReturnLoan" asp-area="" method="post" class="flex-grow-1">

                                        <input type="hidden" name="loanId" value="@loan.Id" />

                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100 rounded-pill"
                                                onclick="return confirm('@loan.BookTitle kitabını iade etmek istediğinize emin misiniz?');">
                                            <i class="bi bi-arrow-return-left"></i> İade Et
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <hr class="my-5 opacity-25">

    <div>
        <h5 class="fw-bold text-secondary mb-4 d-flex align-items-center">
            <i class="bi bi-clock-history me-2"></i> Okuma Geçmişim
        </h5>

        @if (!loanHistory.Any())
        {
            <p class="text-muted">Henüz tamamlanmış bir okuma geçmişiniz yok.</p>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 text-muted small fw-bold text-uppercase">Kitap Adı</th>
                                <th class="text-muted small fw-bold text-uppercase">Yazar</th>
                                <th class="text-muted small fw-bold text-uppercase">Alış Tarihi</th>
                                <th class="text-muted small fw-bold text-uppercase">İade Tarihi</th>
                                <th class="text-end pe-4 text-muted small fw-bold text-uppercase">Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in loanHistory)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">@loan.BookTitle</td>
                                    <td class="text-muted">@loan.Author</td>
                                    <td>@(loan.LoanDate.HasValue? loan.LoanDate.Value.ToString("dd.MM.yyyy") : "-")</td>
                                    <td>
                                        <span class="text-success fw-bold">
                                            <i class="bi bi-check2-all me-1"></i> @(loan.ReturnDate.HasValue? loan.ReturnDate.Value.ToString("dd.MM.yyyy") : "-")
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <span class="badge bg-secondary bg-opacity-25 text-secondary rounded-pill px-3">İade Edildi</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

</div>

<style>
    .loan-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .loan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>