@using Kutuphane.Application.Dtos.ContactDtos
@model Kutuphane.Application.Dtos.MemberDtos.ResultMemberDto

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Controller'dan gelen mesaj listesi (ViewBag üzerinden)
    var msgList = ViewBag.UserMessages as IEnumerable<ResultContactDto>;
}

@if (TempData["Success"] != null)
{
    <div class="container mt-3">
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="container mt-3">
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="container py-5">
    <div class="row g-4">

        <div class="col-lg-4">

            <div class="card border-0 shadow-sm rounded-4 text-center mb-4">
                <div class="card-body p-5">
                    <div class="mb-4 position-relative d-inline-block">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold display-4 shadow-sm"
                             style="width: 120px; height: 120px;">
                            @Model.FirstName.Substring(0, 1).ToUpper()@Model.LastName.Substring(0, 1).ToUpper()
                        </div>
                        <span class="position-absolute bottom-0 end-0 p-2 bg-@(Model.Status == "Aktif" ? "success" : "danger") border border-light rounded-circle" title="Durum: @Model.Status"></span>
                    </div>

                    <h4 class="fw-bold text-dark mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-3">@Model.Email</p>

                    <span class="badge bg-light text-dark border px-3 py-2 rounded-pill mb-4">
                        <i class="bi bi-upc-scan me-1"></i> @Model.MemberNumber
                    </span>

                    <div class="d-grid gap-2">
                        <a asp-action="EditProfile" class="btn btn-outline-primary rounded-pill fw-bold">
                            <i class="bi bi-pencil-square me-1"></i> Profili Düzenle
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-light rounded-pill text-secondary">
                            <i class="bi bi-key me-1"></i> Şifre Değiştir
                        </a>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-primary mb-4"><i class="bi bi-person-lines-fill me-2"></i>Kişisel Bilgiler</h6>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom">
                            <span class="text-muted small"><i class="bi bi-telephone me-2"></i>Telefon</span>
                            <span class="fw-medium">@(string.IsNullOrEmpty(Model.Phone) ? "-" : Model.Phone)</span>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom">
                            <span class="text-muted small"><i class="bi bi-calendar3 me-2"></i>Kayıt</span>
                            <span class="fw-medium">@Model.RegistrationDate?.ToString("dd.MM.yyyy")</span>
                        </li>
                        <li class="list-group-item px-0 pt-3">
                            <span class="text-muted small d-block mb-1"><i class="bi bi-geo-alt me-2"></i>Adres</span>
                            <span class="fw-medium d-block small text-dark">@(string.IsNullOrEmpty(Model.Address) ? "Adres girilmemiş." : Model.Address)</span>
                        </li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="col-lg-8">

            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-lift">
                        <div class="card-body p-4 d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle me-3">
                                <i class="bi bi-book-half fs-3"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Kitaplarım</h6>
                                <p class="text-muted small mb-0">Ödünç aldığın kitapları yönet.</p>
                                <a asp-action="MyLoans" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-lift">
                        <div class="card-body p-4 d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 text-success p-3 rounded-circle me-3">
                                <i class="bi bi-search fs-3"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Katalogda Ara</h6>
                                <p class="text-muted small mb-0">Yeni bir kitap keşfetmeye ne dersin?</p>
                                <a asp-controller="Home" asp-action="Index" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">
                        <i class="bi bi-chat-left-text me-2 text-primary"></i>Mesajlarım
                    </h5>
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-primary rounded-pill px-3 fw-bold btn-sm">
                        <i class="bi bi-plus-lg me-1"></i> Yeni Mesaj
                    </a>
                </div>

                <div class="card-body px-4 pb-4">
                    @if (msgList != null && msgList.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var msg in msgList)
                            {
                                <div class="list-group-item px-0 py-4 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start">

                                        <div class="w-100 me-3">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <h6 class="fw-bold text-dark mb-0">@msg.Subject</h6>
                                                <small class="text-muted" style="font-size: 0.8rem;">
                                                    <i class="bi bi-clock me-1"></i>@msg.CreatedDate.ToString("dd MMM HH:mm")
                                                </small>
                                            </div>

                                            <p class="text-secondary fst-italic mb-2 text-break small">
                                                "@msg.Message"
                                            </p>

                                            @if (!string.IsNullOrEmpty(msg.ReplyMessage))
                                            {
                                                <div class="bg-light p-3 rounded-3 border-start border-4 border-success mt-2">
                                                    <div class="d-flex align-items-center text-success fw-bold mb-1 small">
                                                        <i class="bi bi-reply-fill me-2"></i> Yönetim Cevabı
                                                    </div>
                                                    <span class="text-dark small">@msg.ReplyMessage</span>
                                                </div>
                                            }
                                            else if (msg.MessageType != "Sent")
                                            {
                                                <span class="badge bg-warning text-dark bg-opacity-25 border border-warning fw-normal mt-1" style="font-size: 0.7rem;">İletildi</span>
                                            }
                                        </div>

                                        <form asp-action="DeleteMessage" method="post" onsubmit="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                                            <input type="hidden" name="id" value="@msg.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm border-0 rounded-circle shadow-sm"
                                                    style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;"
                                                    title="Mesajı Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>

                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3 text-muted opacity-25">
                                <i class="bi bi-inbox fs-1"></i>
                            </div>
                            <h6 class="text-dark fw-bold">Henüz mesajınız yok.</h6>
                            <p class="text-muted small mb-0">Yöneticilerle iletişime geçmek için "Yeni Mesaj" butonunu kullanın.</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-3px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.1) !important;
        }
</style>